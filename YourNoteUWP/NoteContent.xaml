<UserControl
    x:Class="YourNoteUWP.NoteContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">


    <UserControl.Resources>

        <DataTemplate x:Key="shareUser" x:DataType="data:User">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Margin="10">
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="25"
                        Foreground="Red"
                        Text="{x:Bind userId}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>



    </UserControl.Resources>





    <Grid Background="Beige">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" />
        <Grid Grid.Column="2" />

        <Grid Grid.Column="1" Background="Black">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>



            <!--  Title of Note  -->


            <TextBox
                Name="TitleOfNote"
                Height="45"
                Margin="15"
                HorizontalAlignment="Stretch"
                FontSize="25"
                Foreground="Red"
                IsReadOnly="{x:Bind _accountPageViewModel.TitleOfNoteIsReadOnly, Mode=OneWay}"
                IsTapEnabled="True"
                Style="{StaticResource TextBoxWithoutDelete}"
                Tapped="{x:Bind _accountPageViewModel.TitleOfNoteTapped, Mode=OneWay}"
                Text="{x:Bind _accountPageViewModel.TitleOfNoteText, Mode=OneWay}"
                TextAlignment="Center"
                TextWrapping="Wrap" />



            <!--  Note Close Button  -->


            <Button
                Name="NoteCloseButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="NoteCloseButton_Click"
                Content="&#xE106;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="5"
                RelativePanel.RightOf="NoteShareButton" />

            <StackPanel Grid.Row="1" Orientation="Horizontal">

                <!--  Note Share Button  -->

                <Button
                    Name="NoteShareButton"
                    HorizontalAlignment="Left"
                    Click="{x:Bind _accountPageViewModel.NoteShareButtonClick, Mode=OneWay}"
                    RelativePanel.AlignLeftWithPanel="True">
                    <StackPanel Orientation="Horizontal">

                        <TextBlock
                            Name="noteShareButtonImage"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE165;" />
                        <TextBlock Name="noteShareButtonText" Text="Share" />
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <Grid>
                                <ListView
                                    Name="usersToShareView"
                                    Width="350"
                                    Height="400"
                                    Margin="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Beige"
                                    BorderBrush="Beige"
                                    BorderThickness="10"
                                    CornerRadius="15"
                                    IsItemClickEnabled="True"
                                    ItemClick="usersToShare_ItemClick"
                                    ItemTemplate="{StaticResource shareUser}"
                                    ItemsSource="{x:Bind usersToShare}" />
                            </Grid>
                        </Flyout>
                    </Button.Flyout>


                </Button>



                <!--  Note Delete Button  -->

                <Button
                    Name="NoteDeleteButton"
                    Click="{x:Bind _accountPageViewModel.NoteDeleteButtonClick, Mode=OneWay}"
                    Content="&#xE107;"
                    FontFamily="Segoe MDL2 Assets"
                    Foreground="Red"
                    RelativePanel.AlignRightWithPanel="True" />
            </StackPanel>



            <!--  Content of Note  -->

            <TextBox
                Name="ContentOfNote"
                Grid.Row="2"
                Margin="20"
                FontSize="25"
                Foreground="Red"
                IsReadOnly="{x:Bind _accountPageViewModel.ContentOfNoteIsReadOnly, Mode=OneWay}"
                IsTapEnabled="True"
                Style="{StaticResource TextBoxWithoutDelete}"
                Tapped="{x:Bind _accountPageViewModel.ContentOfNoteTapped, Mode=OneWay}"
                Text="{x:Bind _accountPageViewModel.ContentOfNoteText, Mode=OneWay}"
                TextWrapping="Wrap" />


        </Grid>

    </Grid>

</UserControl>
