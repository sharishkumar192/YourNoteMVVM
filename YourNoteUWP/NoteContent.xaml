<UserControl
    x:Class="YourNoteUWP.NoteContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>

        <DataTemplate x:Key="shareUser" x:DataType="data:User">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Margin="10">
                    <TextBlock
                        HorizontalAlignment="Left"
                        FontSize="25"
                        Foreground="Red"
                        Text="{x:Bind userId}" />
                </StackPanel>
            </StackPanel>
        </DataTemplate>



    </UserControl.Resources>





    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="80*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="{ThemeResource WindowBrushA}" />
        <Grid Grid.Column="2" Background="{ThemeResource WindowBrushA}" />

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>


            <TextBox
                Name="titleOfNote"
                Height="45"
                Margin="15"
                HorizontalAlignment="Stretch"
                FontSize="25"
                Foreground="Red"
                IsReadOnly="True"
                IsTapEnabled="True"
                Style="{StaticResource TextBoxWithoutDelete}"
                Tapped="titleOfNote_Tapped"
                Text="Title"
                TextAlignment="Center"
                TextWrapping="Wrap" />

            <Button
                Name="noteCloseButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="noteCloseButton_Click"
                Content="&#xE106;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="25"
                RelativePanel.RightOf="noteShareButton"
                Style="{StaticResource AccountPageButton}" />


            <StackPanel Grid.Row="1" Orientation="Horizontal">


                <!--  Note Share Button  -->
                <Button
                    Name="noteShareButton"
                    HorizontalAlignment="Left"
                    Click="noteShareButton_Click"
                    FontSize="25"
                    RelativePanel.AlignLeftWithPanel="True"
                    Style="{StaticResource AccountPageButton}">
                    <StackPanel Orientation="Horizontal">

                        <TextBlock
                            Name="noteShareButtonImage"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE165;" />
                        <TextBlock Name="noteShareButtonText" Text="Share" />
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <Grid>
                                <ListView
                                    Name="usersToShareView"
                                    Width="350"
                                    Height="400"
                                    Margin="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Beige"
                                    BorderBrush="Beige"
                                    BorderThickness="10"
                                    CornerRadius="15"
                                    IsItemClickEnabled="True"
                                    ItemClick="usersToShare_ItemClick"
                                    ItemTemplate="{StaticResource shareUser}"
                                    ItemsSource="{x:Bind usersToShare}" />
                            </Grid>
                        </Flyout>
                    </Button.Flyout>


                </Button>


                <!--  Note Delete Button  -->
                <Button
                    Name="noteDeleteButton"
                    Click="noteDeleteButton_Click"
                    Content="&#xE107;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="25"
                    Foreground="Red"
                    RelativePanel.AlignRightWithPanel="True"
                    Style="{StaticResource AccountPageButton}" />

            </StackPanel>


            <TextBox
                Name="contentOfNote"
                Grid.Row="2"
                Margin="20"
                FontSize="25"
                Foreground="Red"
                IsReadOnly="True"
                IsTapEnabled="True"
                Style="{StaticResource TextBoxWithoutDelete}"
                Text="Content"
                TextWrapping="Wrap" />

        </Grid>
    </Grid>


</UserControl>
