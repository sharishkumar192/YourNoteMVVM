<Page
    x:Class="YourNoteUWP.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:data="using:YourNoteUWP.Models" 
    mc:Ignorable="d"
    >

    <Page.Resources>
        <DataTemplate x:Key="emailIdOfUsers" x:DataType="data:User"
                     
                      >
            <Grid
                Margin="10"
                >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Text="{x:Bind name}" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}" 
                               />

                <TextBlock 
                    Grid.Row="1"
                    Text="{x:Bind userId}" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}" 
                     />

            </Grid>

        </DataTemplate>

    </Page.Resources>

    <ScrollViewer
        Name="logInPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        >
        <Grid
       BorderBrush="{ThemeResource Dark3}"
            Background="{ThemeResource Light2}"
        BorderThickness="2"
        CornerRadius="12"
        HorizontalAlignment="Center"
        >
            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="5*"/>
                <ColumnDefinition  Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid 
                    Grid.Row="0"
                    VerticalAlignment="Center"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>



                    <TextBox 
                            Margin="0,0,0,20"               
                            Name="emailBox"
                            Height="100"
                            Width="400"
                            FontSize="25"
                            BorderThickness="2"  
                            BorderBrush="White"
                            CornerRadius="15"
                            PlaceholderText="Enter Your Email Id"
                            TextChanged="emailBox_TextChanged"
                            LostFocus="emailBox_LostFocus"
                            HorizontalAlignment="Center"
                            Style="{StaticResource TextBoxStyle}"

                    >
                        <ToolTipService.ToolTip>
                            <ToolTip Name="emailBoxToolTip"
                                Content=""
                             Visibility="Visible"

                                />
                        </ToolTipService.ToolTip>
                    </TextBox>


                    <FontIcon
                        Grid.Row="0"
                        Name="emailCheck"              
                        Style="{StaticResource BoxCheck}"
                >
                        <ToolTipService.ToolTip>
                            <ToolTip Name="emailToolTip"
                             Visibility="Visible"
                                Content=""
                                />
                        </ToolTipService.ToolTip>
                    </FontIcon>


                    <Grid 
                        
                        Grid.Row="1"
                      >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>



                        <PasswordBox 

                        x:Name="passwordBox" 
                        VerticalAlignment="Top"
                        PasswordRevealMode="Hidden"          
                        HorizontalAlignment="Center"
                        LostFocus="passwordBox_LostFocus"
                        PasswordChanged="passwordBox_PasswordChanged"
                        Style="{StaticResource PasswordBoxStyle}"
                    >
                            <ToolTipService.ToolTip>
                                <ToolTip 
                        Name="passwordBoxToolTip"
                        Content=""
                            Visibility="Visible"


                     />
                            </ToolTipService.ToolTip>
                        </PasswordBox>



                        <FontIcon
                            Name="passwordCheck"
                            Style="{StaticResource BoxCheck}"
                    >
                            <ToolTipService.ToolTip>
                                <ToolTip Name="passwordToolTip"
                            Content=""
                                 Visibility="Visible"


                            />
                            </ToolTipService.ToolTip>
                        </FontIcon>


                        <CheckBox
                        Grid.Row="1"
                        FontSize="25"
                        HorizontalAlignment="Center"
                        Name="revealModeCheckBox"
                        Content="Show password"
                        IsChecked="False"
                        Checked="revealModeCheckbox_Changed"
                        Unchecked="revealModeCheckbox_Changed"    
                    />



                    </Grid>




                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>


                        <Button Name="logInBackButton"
                            Style="{StaticResource ButtonStyle}"
 HorizontalAlignment="Center"
                VerticalAlignment="Top"
            Grid.Row="4"
            Grid.Column="0"
                Click="logInBackButton_Click"
                Content="Back"/>



                        <Button 
                    Grid.Column="1"
                Style="{StaticResource  ButtonStyle}"
                Name="logInButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="2"  
                Content="Log In" 
                FontSize="25"
              Click="logInButton_Click"/>





                    </Grid>




                </Grid>




            </Grid>




            <!--XAML Code-->
            <!-- In this example, the ListView's ItemTemplate property is bound to a data template (shown below)
called ContactListViewTemplate, defined in a Page.Resources section. -->

            <!--<DataTemplate x:Key="ContactListViewTemplate" x:DataType="local1:Contact">
                <TextBlock Text="{x:Bind Name}" x:Phase="1" Margin="0,5,0,5"/>
            </DataTemplate>-->




            <Grid Grid.Column="1"  
              Name="Column1"  >

                <ListView           
                Name="frequentEmail"
                ItemsSource="{x:Bind users}"
                IsItemClickEnabled="True"
                ItemClick="frequentEmail_ItemClick" 
                ItemTemplate="{StaticResource emailIdOfUsers}"
                Style="{StaticResource LoginListView}"
                Width="400"
                Height="700"
                ItemContainerStyle="{StaticResource LoginListViewItem }"
                >

                </ListView>




            </Grid>



        </Grid>

    </ScrollViewer>







</Page>






