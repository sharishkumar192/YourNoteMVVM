<Page
    x:Class="YourNoteUWP.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     xmlns:data="using:YourNoteUWP.Models" 
    mc:Ignorable="d"
  Background="#092642"
    >

    <Page.Resources>
        <DataTemplate x:Key="EmailIdOfUsers" x:DataType="data:User"
                     
                      >
            <Grid
                Margin="10"
                >
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TextBlock 
                    Text="{x:Bind name}" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}" 
                               />

                <TextBlock 
                    Grid.Row="1"
                    Text="{x:Bind emailId}" 
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}" 
                     />

            </Grid>

        </DataTemplate>
    </Page.Resources>

    <ScrollViewer
        Name="SignUpPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        >
        <Grid
       BorderBrush="#174276"
            Background="#174276"
        BorderThickness="10"
        CornerRadius="12"
        HorizontalAlignment="Center"
        >
        <Grid.ColumnDefinitions>
            <ColumnDefinition  />
            <ColumnDefinition  />
        </Grid.ColumnDefinitions>



        <Grid Grid.Column="0"
              >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid 
                Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                    <TextBox 
            Name="EmailBoxContent"
                        Height="150"
                        Width="400"
                        Header="Enter Your Email Id:"
                     
                                FontSize="25"
                    BorderThickness="2"  
                             BorderBrush="White"
                             CornerRadius="15"

                    TextChanged="EmailBoxContent_TextChanged"
                           HorizontalAlignment="Center"
                       PlaceholderText="xyz@email.com"
                             PlaceholderForeground="#96B9DE"
                          Style="{StaticResource SignUpTextBox}"

                        >


                    </TextBox>

                     








                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>



                    <PasswordBox 
                        Grid.Row="0"
                        x:Name="passwordBox" 
                        VerticalAlignment="Top"
                        PasswordRevealMode="Hidden"
                        Header="Enter Your Password : "            
                        HorizontalAlignment="Center"
                        Style="{StaticResource SignUpPasswordBox}"
                        />

                    <CheckBox
                        Grid.Row="2"
                        FontSize="25"
                        HorizontalAlignment="Center"
                        Name="revealModeCheckBox"
                        Content="Show password"
                        IsChecked="False"
                        Checked="RevealModeCheckbox_Changed"
                        Unchecked="RevealModeCheckbox_Changed"    
                    />


                    <TextBlock 
                        Grid.Row="3"
                        Name="accountExists"

                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Style="{StaticResource SignUpTextBlocks}"
                        />
                </Grid>




                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Button Name="LogInBackButton"
                            Style="{StaticResource HomePageButton}"
 HorizontalAlignment="Center"
                VerticalAlignment="Top"
            Grid.Row="4"
            Grid.Column="0"
                Click="LogInBackButton_Click"
                Content="Back"/>



                    <Button 
                    Grid.Column="1"
                Style="{StaticResource HomePageButton}"
                Name="LogInButton"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Grid.Row="2"  
                Content="Log In" 
                FontSize="25"
              Click="LogInButton_Click"/>





                </Grid>




            </Grid>




        </Grid>




        <!--XAML Code-->
        <!-- In this example, the ListView's ItemTemplate property is bound to a data template (shown below)
called ContactListViewTemplate, defined in a Page.Resources section. -->

        <!--<DataTemplate x:Key="ContactListViewTemplate" x:DataType="local1:Contact">
                <TextBlock Text="{x:Bind Name}" x:Phase="1" Margin="0,5,0,5"/>
            </DataTemplate>-->




        <Grid Grid.Column="1"  
              Name="Column1"  >

                <ListView           
                Name="FrequentEmail"
                ItemsSource="{x:Bind users}"
                IsItemClickEnabled="True"
                ItemClick="FrequentEmail_ItemClick" 
                ItemTemplate="{StaticResource EmailIdOfUsers}"
                Style="{StaticResource LoginListView}"
                Width="400"
                Height="700"
                ItemContainerStyle="{StaticResource LoginListViewItem }"
                >

                </ListView>




            </Grid>



    </Grid>

        </ScrollViewer>
       






</Page>






