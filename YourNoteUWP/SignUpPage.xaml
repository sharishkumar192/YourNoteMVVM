<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   

    >
    <ScrollViewer
    Name="signUpPageScrollViewer"
    HorizontalScrollBarVisibility="Auto"
    VerticalScrollBarVisibility="Auto"
>
        <Grid 

        CornerRadius="12"
        BorderBrush="{ThemeResource Dark3}"
        Background="{ThemeResource Light2}"
        BorderThickness="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"                 
    >


            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBox
                Grid.Row="0"
                Margin="0,10,0,20"
                Name="nameBox"
                Style="{StaticResource TextBoxStyle}"
                HorizontalAlignment="Center" 
                TextChanged="nameBox_TextChanged"
                MinHeight="100"
                MinWidth="150"
                FontSize="25"
                LostFocus="nameBox_LostFocus"
                MaxHeight="200" 
                MaxWidth="500"
                PlaceholderText="Enter Your Name"
                Text="">
                <ToolTipService.ToolTip>
                    <ToolTip Name="nameBoxToolTip"
                                Content=""
                             Visibility="Visible"

                                />
                </ToolTipService.ToolTip>
            </TextBox>


            <FontIcon
                        Grid.Row="0"
                        Name="nameCheck"              
                        Style="{StaticResource BoxCheck}"
                >
                <ToolTipService.ToolTip>
                    <ToolTip Name="nameToolTip"
                             Visibility="Visible"
                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>




            <TextBox 
                Grid.Row="1"
                 Margin="0,0,0,20"
                PlaceholderText="Enter Your Email Id"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource TextBoxStyle}"
                Name="emailBox"
                MinHeight="100"
                MinWidth="150"
                MaxHeight="200"
                MaxWidth="500"
                FontSize="25"
                LostFocus="emailBox_LostFocus"
                TextChanged="emailBox_TextChanged"

            >
                <ToolTipService.ToolTip>
                    <ToolTip
                        Visibility="Collapsed"
                        Name="emailBoxToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>
            </TextBox>





            <FontIcon 
                Grid.Row="1"
                Style="{StaticResource BoxCheck}"
                Name="emailCheck"
            >
                <ToolTipService.ToolTip>
                    <ToolTip 
                        Visibility="Visible"
                        Name="emailToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>

            </FontIcon>


            <Grid   
                Grid.Row="2"
                Margin="0,0,0,20"
                >

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>




                <PasswordBox 

                            Style="{StaticResource PasswordBoxStyle}"
                            Name="passwordBox" 
                            PasswordRevealMode="Hidden"
                            PasswordChanged="passwordBox_PasswordChanged"
                            HorizontalAlignment="Center"
                            PlaceholderText="Enter The Password"
                            LostFocus="passwordBox_LostFocus"


                    >
                    <ToolTipService.ToolTip>
                        <ToolTip 
                        Name="passwordBoxToolTip"
                        Content=""
                            Visibility="Visible"


                     />
                    </ToolTipService.ToolTip>
                </PasswordBox>



                <FontIcon
                            Name="passwordCheck"
                            Style="{StaticResource BoxCheck}"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip Name="passwordToolTip"
                            Content=""
                                 Visibility="Visible"


                            />
                    </ToolTipService.ToolTip>
                </FontIcon>


                <CheckBox 
                            Grid.Row="1"
                            FontSize="25"
                            HorizontalAlignment="Center"
                            Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                            Checked="revealModeCheckbox_Changed" 
                            Unchecked="revealModeCheckbox_Changed"
                    />



            </Grid>


            <PasswordBox 
                Margin="0,0,0,10"
                        Grid.Row="3"
                        Style="{StaticResource PasswordBoxStyle}"
                        Name ="rPasswordBox"
                        PasswordRevealMode="Hidden"
                        MinHeight="100"
                        MinWidth="150"
                        MaxHeight="200"
                        MaxWidth="500"
                        HorizontalAlignment="Center"
                        LostFocus="rPasswordBox_LostFocus"
                        PasswordChanged="repasswordBox_PasswordChanged"
                >
                <ToolTipService.ToolTip>
                    <ToolTip Name="rPasswordBoxToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </PasswordBox>



            <FontIcon
                        Grid.Row="3"
                        Name="rPasswordCheck"              
                        Style="{StaticResource BoxCheck}"
                >
                <ToolTipService.ToolTip>
                    <ToolTip Name="rPasswordToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>



            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
            >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>


                <Button 
                            Name="signUpBackButton"
                            Style="{StaticResource ButtonStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Grid.Column="0"
                            Click="signUpBackButton_Click"
                            Content="Back"
                    />

                <Button 
                            Grid.Column="1"
                            Name="signUpButton"
                            Style="{StaticResource ButtonStyle}"
                            Click="signUpButton_Click"
                            Content="Create Account"
                    />


            </Grid>


        </Grid>




    </ScrollViewer>


</Page>
