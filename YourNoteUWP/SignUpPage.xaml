<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#092642"

    >
    <ScrollViewer
    Name="SignUpPageScrollViewer"
    HorizontalScrollBarVisibility="Auto"
    VerticalScrollBarVisibility="Auto"
>
        <Grid 

        CornerRadius="12"
        BorderBrush="#174276"
        Background="#174276"
        BorderThickness="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"                 
    >


            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBox
                Grid.Row="0"
                Margin="20"
                Name="NameBoxContent"
                Style="{StaticResource SignUpTextBox}"
                HorizontalAlignment="Center" 
                TextChanged="NameBox_TextChanged"
                MinHeight="100"
                MinWidth="150"
                FontSize="25"
                LostFocus="NameBoxContent_LostFocus"
                MaxHeight="200" 
                MaxWidth="500"
                PlaceholderText="Enter Your Name"
                Text="">
                <ToolTipService.ToolTip>
                    <ToolTip Name="NameBoxToolTip"
                                Content=""
                             Visibility="Visible"

                                />
                </ToolTipService.ToolTip>
            </TextBox>


            <FontIcon
                        Grid.Row="0"
                        Name="NameCheck"              
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Visibility="Collapsed"
                        Glyph="&#x0021;"
                        FontFamily="Amiri"
                
                        FontSize="50"
                >
                <ToolTipService.ToolTip>
                    <ToolTip Name="NameToolTip"
                             Visibility="Visible"
                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>




            <TextBox 
                Grid.Row="1"
                PlaceholderText="Enter Your Email Id"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource SignUpTextBox}"
                Name="EmailBox"
                MinHeight="100"
                MinWidth="150"
                MaxHeight="200"
                MaxWidth="500"
                FontSize="25"
                LostFocus="EmailBox_LostFocus"
                TextChanged="EmailBox_TextChanged"

            >
                <ToolTipService.ToolTip>
                    <ToolTip
                        Visibility="Collapsed"
                        Name="EmailBoxToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>
            </TextBox>





            <FontIcon 
                Grid.Row="1"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                Margin="0,0,20,0"
                Name="EmailCheck"
                Glyph="&#x0021;"
                FontFamily="Amiri"
                FontSize="50"
                Visibility="Collapsed"
            >
                <ToolTipService.ToolTip>
                    <ToolTip 
                        Visibility="Visible"
                        Name="EmailToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>

            </FontIcon>


            <Grid   
                Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>




                <PasswordBox 

                            Style="{StaticResource SignUpPasswordBox}"
                            Name="PasswordBox" 
                            PasswordRevealMode="Hidden"
                            Header="Enter Your Password :"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            HorizontalAlignment="Center"
                            PlaceholderText="Enter The Password"
                            LostFocus="PasswordBox_LostFocus"


                    >
                    <ToolTipService.ToolTip>
                        <ToolTip 
                        Name="PasswordBoxToolTip"
                        Content=""
                            Visibility="Visible"


                     />
                    </ToolTipService.ToolTip>
                </PasswordBox>



                <FontIcon
                            Name="PasswordCheck"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0"
                            Visibility="Collapsed"
                            Glyph="&#x0021;"
                            FontFamily="Amiri"
                            FontSize="50"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip Name="PasswordToolTip"
                            Content=""
                                 Visibility="Visible"


                            />
                    </ToolTipService.ToolTip>
                </FontIcon>


                <CheckBox 
                            Grid.Row="1"
                            FontSize="25"
                            HorizontalAlignment="Center"
                            Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                            Checked="RevealModeCheckbox_Changed" 
                            Unchecked="RevealModeCheckbox_Changed"
                    />



            </Grid>


            <PasswordBox 
                        Grid.Row="3"
                        Style="{StaticResource SignUpPasswordBox}"
                        Name ="RPasswordBox"
                        MinHeight="100"
                        MinWidth="150"
                        MaxHeight="200"
                        MaxWidth="500"
                        Header="Reenter Your Password"
                        HorizontalAlignment="Center"
                        LostFocus="RPasswordBox_LostFocus"
                        PasswordChanged="RepasswordBox_PasswordChanged"
                >
                <ToolTipService.ToolTip>
                    <ToolTip Name="RPasswordBoxToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </PasswordBox>



            <FontIcon
                        Grid.Row="3"
                        Name="RPasswordCheck"              
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Visibility="Collapsed"
                        Glyph="&#x0021;"
                        FontFamily="Amiri"
                        FontSize="50"
                >
                <ToolTipService.ToolTip>
                    <ToolTip Name="RPasswordToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>



            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
            >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>


                <Button 
                            Name="SignUpBackButton"
                            Style="{StaticResource HomePageButton}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Grid.Column="0"
                            Click="SignUpBackButton_Click"
                            Content="Back"
                    />

                <Button 
                            Grid.Column="1"
                            Name="SignUpButton"
                            Style="{StaticResource HomePageButton}"
                            Click="SignUpButton_Click"
                            Content="Create Account"
                    />


            </Grid>


        </Grid>




    </ScrollViewer>


</Page>
