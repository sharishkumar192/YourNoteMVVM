<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#092642"
    >
    <ScrollViewer
        Name="SignUpPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        >
    <Grid 
      
        CornerRadius="12"
        BorderBrush="#174276"
          Background="#174276"
        BorderThickness="2"
        
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        >

        <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

        

                    <TextBox
                    Name="NameBoxContent"
                    Style="{StaticResource SignUpTextBox}"
                    Header="Enter Your Name :"
                    HorizontalAlignment="Center" 
                    MinHeight="100"
                    MinWidth="150"
                        FontSize="25"
                    MaxHeight="200"
                    MaxWidth="500"
                    Text=""/>


      






                    <TextBox 
                        Grid.Row="1"
                        Style="{StaticResource SignUpTextBox}"
                        Name="EmailBoxContent"
                        Header="Enter Your Email Id :"
                        HorizontalAlignment="Center"
                       
                     MinHeight="100"
                    MinWidth="150"
                    MaxHeight="200"
                    MaxWidth="500"
                        FontSize="25"
                        TextChanged="EmailBoxContent_TextChanged"
                    />





            <Grid   Grid.Row="2">

                    <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    </Grid.RowDefinitions>


                    <PasswordBox 
                      
                        Style="{StaticResource SignUpPasswordBox}"
                        Name="passwordBox" 
                        PasswordRevealMode="Hidden"
                        Header="Enter Your Password :"
                        PasswordChanged="passwordBox_PasswordChanged"
                        HorizontalAlignment="Center"
                        PlaceholderText="Enter The Password"
                        

                    />


                    <CheckBox 
                         Grid.Row="1"
                         FontSize="25"
                         HorizontalAlignment="Center"
                         Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                         Checked="RevealModeCheckbox_Changed" 
                        Unchecked="RevealModeCheckbox_Changed"
                    >


            </CheckBox>


        </Grid>



      




                <PasswordBox 
                    Grid.Row="3"
                    Style="{StaticResource SignUpPasswordBox}"
                    Name ="repasswordBox"
                    MinHeight="100"
                    MinWidth="150"
                    MaxHeight="200"
                    MaxWidth="500"
                    Header="Reenter Your Password"
                    HorizontalAlignment="Center"
                    PasswordChanged="RepasswordBox_PasswordChanged"
                    />


                <TextBlock 
                        Style="{StaticResource SignUpTextBlocks}"
                        Grid.Row="1"
                        Name="statusTextForRePasswordBox"  
                    />



            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
                      >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>


                <Button 
                    Name="SignUpBackButton"
                    Style="{StaticResource HomePageButton}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Grid.Column="0"
                    Click="SignUpBackButton_Click"
                    Content="Back"
                />

            <Button 
                Grid.Column="1"
                Name="SignUpButton"
                Style="{StaticResource HomePageButton}"
                Click="SignUpButton_Click"
                Content="Create Account"/>


        </Grid>

            

    </Grid>

    </ScrollViewer>





</Page>
