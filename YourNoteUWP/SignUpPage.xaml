<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#092642"
    >
    <ScrollViewer
        Name="SignUpPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        >
    <Grid 
      
        CornerRadius="12"
        BorderBrush="#174276"
          Background="#174276"
        BorderThickness="2"
        
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        >

        <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


            <StackPanel
                
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
            
            <TextBox
                    Name="NameBoxContent"
                    Style="{StaticResource SignUpTextBox}"
                    Header="Enter Your Name :"
                    HorizontalAlignment="Center" 
                TextChanged="NameBox_TextChanged"
                    MinHeight="100"
                    MinWidth="150"
                        FontSize="25"
                LostFocus="NameBoxContent_LostFocus"
                    MaxHeight="200"
                    MaxWidth="500"

                    Text=""/>


                <ProgressRing Name="NameProgress" IsActive="True" Visibility="Collapsed"/>
              
            </StackPanel>




            <StackPanel 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Grid.Row="1"
                Orientation="Horizontal">
          
            <TextBox 
                       
                        Style="{StaticResource SignUpTextBox}"
                        Name="EmailBox"
                        Header="Enter Your Email Id :"
                        HorizontalAlignment="Center"
                       
                     MinHeight="100"
                    MinWidth="150"
                    MaxHeight="200"
                    MaxWidth="500"
                        FontSize="25"
                LostFocus="EmailBox_LostFocus"
                        TextChanged="EmailBox_TextChanged"
               
                    />

                <ProgressRing
                    Name="EmailProgress"
                    IsActive="True"
                    Visibility="Collapsed"
                    />
                <CheckBox
                    IsEnabled="True"
                    Name="EmailCheck"
                    IsChecked="True"
                    Visibility="Collapsed"
              Style="{StaticResource ValidateCheckBox}"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip Name="EmailToolTip"
                                 Content=""
                                 
                                 />
                    </ToolTipService.ToolTip>
                </CheckBox>


            </StackPanel>



            <Grid   Grid.Row="2">

                    <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    </Grid.RowDefinitions>


                <StackPanel Orientation="Horizontal"
                            
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                            >

                <PasswordBox 
                      
                        Style="{StaticResource SignUpPasswordBox}"
                        Name="PasswordBox" 
                        PasswordRevealMode="Hidden"
                        Header="Enter Your Password :"
                        PasswordChanged="PasswordBox_PasswordChanged"
                        HorizontalAlignment="Center"
                        PlaceholderText="Enter The Password"
                    LostFocus="PasswordBox_LostFocus"
                        

                    />
                    <ProgressRing
                    Name="PasswordProgress"
                    IsActive="True"
                    Visibility="Collapsed"
                    />
                    <CheckBox
                    IsEnabled="True"
                    Name="PasswordCheck"
                    IsChecked="True"
                    Visibility="Collapsed"
              Style="{StaticResource ValidateCheckBox}"
                    >
                        <ToolTipService.ToolTip>
                            <ToolTip Name="PasswordToolTip"
                                 Content=""
                                 
                                 />
                        </ToolTipService.ToolTip>
                    </CheckBox>

                </StackPanel>

                <CheckBox 
                         Grid.Row="1"
                         FontSize="25"
                         HorizontalAlignment="Center"
                         Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                         Checked="RevealModeCheckbox_Changed" 
                        Unchecked="RevealModeCheckbox_Changed"
                    >


            </CheckBox>


        </Grid>






            <StackPanel
                Grid.Row="3"
                
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                    Orientation="Horizontal"
                >

                <PasswordBox 
                    
                    Style="{StaticResource SignUpPasswordBox}"
                    Name ="RPasswordBox"
                    MinHeight="100"
                    MinWidth="150"
                    MaxHeight="200"
                    MaxWidth="500"
                    Header="Reenter Your Password"
                    HorizontalAlignment="Center"
                    LostFocus="RPasswordBox_LostFocus"
                    PasswordChanged="RepasswordBox_PasswordChanged"
                    />


                <ProgressRing
                    Name="RPasswordProgress"
                    IsActive="True"
                    Visibility="Collapsed"
                    />
                <CheckBox
                    IsEnabled="True"
                    Name="RPasswordCheck"
                    IsChecked="True"
                    Visibility="Collapsed"
              Style="{StaticResource ValidateCheckBox}"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip Name="RPasswordToolTip"
                                 Content=""
                                 
                                 />
                    </ToolTipService.ToolTip>
                </CheckBox>


            </StackPanel>




            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
                      >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>


                <Button 
                    Name="SignUpBackButton"
                    Style="{StaticResource HomePageButton}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Grid.Column="0"
                    Click="SignUpBackButton_Click"
                    Content="Back"
                />

            <Button 
                Grid.Column="1"
                Name="SignUpButton"
                Style="{StaticResource HomePageButton}"
                Click="SignUpButton_Click"
                Content="Create Account"/>


        </Grid>

            

    </Grid>

    </ScrollViewer>





</Page>
