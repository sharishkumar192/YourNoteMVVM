<Page
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/AppBackdrop-Light.png" />
    </Page.Background>
    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>


        <DataTemplate x:Key="SearchTitle" x:DataType="data:Note">

            <Border
                Width="300"
                BorderBrush="White"
                BorderThickness="0,0,0,1">
                <TextBlock
                    Padding="0,0,0,2"
                    HorizontalAlignment="Stretch"
                    FontSize="14"
                    Foreground="White"
                    HorizontalTextAlignment="Center"
                    Text="{x:Bind title}" />
            </Border>
        </DataTemplate>


        <DataTemplate x:Key="RecentlySuggested" x:DataType="data:Note">

            <Border
                Width="300"
                BorderBrush="White"
                BorderThickness="0,0,0,1">
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="{x:Bind title}" />
            </Border>

        </DataTemplate>
    </Page.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel
            Margin="5,5,5,0"
            VerticalAlignment="Center"
            Background="#adb5bd"
            BorderBrush="Black"
            BorderThickness="1,1,1,0"
            CornerRadius="4,4,0,0">

            <StackPanel
                Margin="10,5,0,0"
                Orientation="Horizontal"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">

                <Image
                    Width="30"
                    Height="30"
                    Margin="0,0,10,10"
                    Source="/Assets/StoreLogo.scale-100.png" />

                <TextBlock
                    Margin="0,7,0,0"
                    FontSize="24"
                    Foreground="Black"
                    Text="Notebook" />
            </StackPanel>




            <ListBox
                Name="MainMenuOptions"
                ItemContainerStyle="{StaticResource MainMenuItemStyle}"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                SelectionChanged="{x:Bind _accountPageViewModel.MainMenuOptionsSelectionChanged}"
                SelectionMode="Single"
                Style="{StaticResource MainMenuStyle}">
                <ListBoxItem
                    Name="PersonalContent"
                    Content="Personal"
                    IsSelected="{x:Bind _accountPageViewModel.PersonalContentIsSelected, Mode=TwoWay}"
                    IsTapEnabled="True" />

                <ListBoxItem
                    Name="SharedContent"
                    Content="Shared"
                    IsSelected="{x:Bind _accountPageViewModel.SharedContentIsSelected, Mode=TwoWay}" />

                <ListBoxItem
                    Name="NoteCreation"
                    Content="New Note"
                    IsSelected="{x:Bind _accountPageViewModel.NoteCreationIsSelected, Mode=TwoWay}" />

            </ListBox>



            <TextBox
                Name="SearchTextBox"
                Width="300"
                Height="40"
                Background="White"
                CornerRadius="4"
                FontSize="15"
                Foreground="Black"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.LeftOf="UserMenu"
                Style="{StaticResource CustomSearchBox}"
                Text="{x:Bind _accountPageViewModel.SearchTextBoxText, Mode=OneWay}"
                TextChanged="{x:Bind _accountPageViewModel.SearchTextBoxTextChanged, Mode=OneWay}" />

            <Popup
                Name="SuggestionsPopup"
                IsLightDismissEnabled="False"
                IsOpen="{x:Bind _accountPageViewModel.SuggestionsPopupIsOpen, Mode=OneWay}"
                RelativePanel.AlignBottomWith="SearchTextBox">
                <Grid
                    Name="PopUpContainer"
                    Width="Auto"
                    Height="Auto">

                    <ListBox
                        Name="RecentSuggestedContent"
                        Background="Black"
                        BorderBrush="Red"
                        BorderThickness="10,0,10,10"
                        CornerRadius="4"
                        ItemTemplate="{StaticResource RecentlySuggested}"
                        ItemsSource="{x:Bind _accountPageViewModel.RecentSuggestedItemSource, Mode=OneWay}"
                        SelectionChanged="{x:Bind _accountPageViewModel.RecentSuggestedSelectionChanged, Mode=OneWay}"
                        SelectionMode="Single"
                        Visibility="{x:Bind _accountPageViewModel.RecentSuggestedVisibility, Mode=OneWay}" />

                    <ListView
                        Name="SearchBoxContainerContent"
                        Height="Auto"
                        Background="Black"
                        BorderBrush="Red"
                        BorderThickness="10,0,10,10"
                        CornerRadius="4"
                        IsItemClickEnabled="True"
                        ItemClick="{x:Bind _accountPageViewModel.SearchBoxContainerItemClick, Mode=OneWay}"
                        ItemTemplate="{StaticResource SearchTitle}"
                        ItemsSource="{x:Bind _accountPageViewModel.SearchBoxContentItemSource, Mode=OneWay}"
                        Visibility="{x:Bind _accountPageViewModel.SearchBoxContentVisibility, Mode=OneWay}" />

                </Grid>

            </Popup>

            <Button
                Name="UserMenu"
                Margin="10"
                Background="Black"
                Click="{x:Bind _accountPageViewModel.LogoutContentTapped, Mode=OneWay}"
                CornerRadius="4"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">
                <Image
                    Width="27"
                    Height="27"
                    Source="/Assets/LockScreenLogo.scale-200.png"
                    Stretch="Fill" />
            </Button>




        </RelativePanel>

        <GridView
            Name="NotesData"
            Grid.Row="1"
            Margin="5,0,5,5"
            HorizontalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1,0,1,1"
            CornerRadius="0,0,4,4"
            IsItemClickEnabled="True"
            ItemClick="{x:Bind _accountPageViewModel.NotesDataItemClick, Mode=OneWay}"
            ItemContainerStyle="{StaticResource NoteGridViewItem}"
            ItemsSource="{x:Bind _accountPageViewModel.NotesDataItemSource, Mode=OneWay}">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="data:Note">
                    <local:NotesDataTemplate />


                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <Popup
            Name="NoteDisplayPopUp"
            IsLightDismissEnabled="False"
            IsOpen="{x:Bind _accountPageViewModel.NoteDisplayPopUpIsOpen, Mode=OneWay}">

            <local:NoteContent
                x:Name="NoteContentPopUp"
                Width="{x:Bind _accountPageViewModel.NoteContentPopUpWidth, Mode=OneWay}"
                Height="{x:Bind _accountPageViewModel.NoteContentPopUpHeight, Mode=OneWay}" />
        </Popup>


    </Grid>



</Page>
