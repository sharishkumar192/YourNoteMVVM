<Page
    
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:data="using:YourNoteUWP.Models" 
    mc:Ignorable="d"
    Background="#174276"
    >

    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>



        <DataTemplate x:DataType="data:Note" x:Key="SearchTitle" >
            <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock 
                        Text="{x:Bind title}" 
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                               />

            </StackPanel>
        </DataTemplate>

        <DataTemplate x:DataType="data:Note" x:Key="RecentlySuggested" >
            <StackPanel 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock 
                        Text="{x:Bind title}" 
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                        Style="{StaticResource SignUpTextBlocks}" 
                               />

            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid
        Name="Casd"
        >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel 
            Grid.Row="0"
            >
            
            <Image 
                Source="Assets/123.png"
                Height="64"
                Width="64"
                RelativePanel.AlignLeftWithPanel="True" 
                Name="userImage" 
                />


            <!--<Auto Suggestion Box>-->

            <RelativePanel
                
                RelativePanel.AlignRightWithPanel="True"
                Name="CustomAutoSuggestBox"
                >
                <TextBox
            CornerRadius="12"

            Height="50"
            Width="300"
            Name="SearchTextBox"
            Background="Black"
            Foreground="Red"

            TextChanged="SearchTextBox_TextChanged" 
            />
                 <Popup 
                Name="SuggestionsPopup"
                   IsOpen="False"
                   RelativePanel.AlignBottomWith="SearchTextBox"
                IsLightDismissEnabled="False"
                   >
                    <Grid
                        Background="#041322"

                  Name="PopUpContainer"
                  >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel
                        Name="RecentlySearchedContainer"
                        
                        >
                            <TextBlock
                                Name="RecentSuggestedHeader"
                            Text="Recently Search Notes : "
                            />
                            <ListBox
                    
                    Name="RecentSuggestedContent"

                        ItemsSource="{x:Bind recentNotes}"
                           ItemTemplate="{StaticResource RecentlySuggested}"
                            SelectionMode="Single"
                            SelectionChanged="RecentSuggestedContent_SelectionChanged"
                            >
                                
                            </ListBox>

                        </StackPanel>


                        <StackPanel
                         Grid.Row="1"
                        Name="SearchBoxContainer"
                        
                        >
                            <TextBlock
                                Name="SearchBoxContainerHeader"
                            Text="Titles: "
                            />
                            <ListView
                            Height="200"
                            Name="SearchBoxContainerContent"
                            Style="{StaticResource SearchContainerStyle}"
                           ItemContainerStyle="{StaticResource SearchContainerItemStyle}"
                            ItemsSource="{x:Bind notesForSearch}"
                           IsItemClickEnabled="True"
                            ItemClick="SearchBoxContainerContent_ItemClick"
                            ItemTemplate="{StaticResource SearchTitle}"
                            />
                        </StackPanel>
                    </Grid>

                </Popup>
            </RelativePanel>



        </RelativePanel>

        

            <SplitView

            Grid.Row="1"
            Name="SplitViewz"
                       DisplayMode="CompactInline"
                       OpenPaneLength="180"
            CompactPaneLength="64"
                
                      >

                <SplitView.Pane>

            <ListBox
                      Background="#091a2f"
                             Name="HamburgerOptions" 
                             SelectionMode="Single"  
                             SelectionChanged="HamburgerOptions_SelectionChanged"
                              SelectedIndex="0"
                    >



                        <ListBoxItem  Name="PersonalContent" 
                                  >
                        <StackPanel>
                            <TextBlock 
                               HorizontalAlignment="Center"
                                Name="PersonalContentIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xE8D4;" />
                            <TextBlock Name="PersonalContentText" HorizontalAlignment="Left" FontSize="12" Text="Personal" 
                                       Visibility="Collapsed"
                                       />
                        </StackPanel>
                    </ListBoxItem>


                    <ListBoxItem  Name="SharedContent" 
                                  >
                        <StackPanel>
                            <TextBlock 
                                  HorizontalAlignment="Center"
                                Name="SharedContentIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xEBDA;" />
                            <TextBlock Name="SharedContentText" FontSize="12" Text="Shared"  HorizontalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>


                    <ListBoxItem  Name="NoteCreation" 

                                  >
                        <StackPanel>
                            <TextBlock 
                                HorizontalAlignment="Center"
                                Name="NoteCreationIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xF56E;" />
                            <TextBlock FontSize="12" HorizontalAlignment="Left" Name ="NoteCreationText" Text="New Note"  TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </ListBoxItem>
                    
        

                <ListBoxItem  Name="PreviousPage" 
                               
                              
                              Background="Red"
                                  >
                    <StackPanel>
                            <TextBlock HorizontalAlignment="Center"
                                
                                Name="PreviousPageIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xF56E;"  />
                            <TextBlock FontSize="12" Text="Logout"  HorizontalAlignment="Left" TextWrapping="WrapWholeWords"/>
                    </StackPanel>
                </ListBoxItem>

                </ListBox>

            </SplitView.Pane>
            <SplitView.Content
                >

                <!--<Frame Name="MFrame">-->
                    <!--Grid View-->


                    <GridView 
                    IsItemClickEnabled="True"
                    ItemClick="NotesData_ItemClick" 
                    Name="NotesData"
                    Margin="5"
                            HorizontalAlignment="Stretch"
                    Style="{StaticResource NoteGridView}"
                    ItemContainerStyle="{StaticResource NoteGridViewItem}"
                    ItemsSource="{x:Bind notesFeeder, Mode=OneWay}"
                                      
                    
                    >
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="data:Note">
                                <local:NotesDataTemplate/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>

                <!--</Frame>-->
            </SplitView.Content>

        </SplitView>
        <Button
           
            />

    </Grid>

</Page>
<!--Header="Users"-->