<UserControl x:ConnectionId='1'
    x:Class="YourNoteUWP.NotesDataTemplate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <Grid x:ConnectionId='2' Name="NotesDisplayContent" Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='3'
            Name="titles"
            Grid.Row="0"
            FontSize="20"
            Foreground="Black"
                                                />




        <TextBlock x:ConnectionId='4'
            Name="contents"
            Grid.Row="1"
            Margin="20"
            HorizontalAlignment="Center"
            FontSize="15"
            Foreground="Black"
                                                  />


        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='5' x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="NotesDisplayContent.Width" Value="464" />
                    </VisualState.Setters>
                </VisualState>

                <VisualState x:ConnectionId='6' x:Name="NarrowerLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="549" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="NotesDisplayContent.Width" Value="366" />
                    </VisualState.Setters>
                </VisualState>


                <VisualState x:ConnectionId='7' x:Name="NarrowestLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="821" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>


                        <Setter Target="NotesDisplayContent.Width" Value="316" />
                    </VisualState.Setters>
                </VisualState>


                <VisualState x:ConnectionId='8' x:Name="WidererLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1076" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="NotesDisplayContent.Width" Value="307" />

                    </VisualState.Setters>
                </VisualState>



                <VisualState x:ConnectionId='9' x:Name="WidestLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1378" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>

                        <Setter Target="NotesDisplayContent.Width" Value="254" />

                    </VisualState.Setters>
                </VisualState>


            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>

</UserControl>

