<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.View.SignInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Background>
        <ImageBrush ImageSource="/Assets/AppBackdrop-Light.png" />
    </Page.Background>




    <Page.Resources>
        <DataTemplate x:Key="emailIdOfUsers"                       >
            <StackPanel x:ConnectionId='3'
                Width="Auto"
                Height="Auto"
                Margin="0"
                Background="#ffffff"
                BorderBrush="#2c2c2c"
                BorderThickness="0,0,0,1"
                Orientation="Horizontal">

                <Image
                    Width="40"
                    Height="40"
                    Margin="0,0,10,0"
                    Source="/Assets/LockScreenLogo.scale-200.png" />
                <StackPanel>
                    <TextBlock x:ConnectionId='4' Style="{StaticResource SignUpTextBlocks}"                      />
                    <TextBlock x:ConnectionId='5' Style="{StaticResource SignUpTextBlocks}"                        />
                </StackPanel>

            </StackPanel>


        </DataTemplate>

    </Page.Resources>


    <ScrollViewer x:ConnectionId='6'
        Name="LogInPageScrollViewer"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <!--<Login fields>-->
        <controls:DropShadowPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            BlurRadius="10"
            Color="Gray">
            <Grid
                Padding="20,20,20,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="#ffffff"
                CornerRadius="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <Grid
                    Grid.Column="0"
                    Padding="20,0,40,0"
                    Background="#ffffff"
                    BorderBrush="{StaticResource WindowBrushA}"
                    BorderThickness="1,1,0,1"
                    CornerRadius="4">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>


                    <!--<Title>-->
                    <StackPanel
                        Grid.Row="0"
                        Margin="0,5,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Background="#ffffff"
                        CornerRadius="4">

                        <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                            <Image
                                Width="30"
                                Height="30"
                                Margin="0,0,10,10"
                                Source="/Assets/StoreLogo.scale-100.png" />

                            <TextBlock
                                FontSize="20"
                                Foreground="Black"
                                Text="Notebook" />
                        </StackPanel>
                        <TextBlock
                            Margin="15,5,5,1"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Foreground="Black"
                            Text="Sign in" />

                        <TextBlock
                            Margin="15,1"
                            FontSize="14"
                            Foreground="Black"
                            Text="to access Notebook" />
                    </StackPanel>


                    <!--<Email Field>-->
                    <TextBox x:ConnectionId='10'
                        Name="EmailBox"
                        Grid.Row="2"
                        HorizontalAlignment="Center"
                                                                                       
                        Style="{StaticResource TextBoxStyle}"
                                                                                                   
                                                                                />


                    <RelativePanel Grid.Row="2" Margin="0,15,0,0">
                        <Border x:ConnectionId='18'
                            Name="EmailFontBorderStyle"
                            Width="Auto"
                            Margin="-10,0,-30,0"
                            RelativePanel.AlignRightWithPanel="True"
                            Style="{StaticResource FontBorderStyle}">
                            <FontIcon x:ConnectionId='19'
                                Name="EmailCheck"
                                HorizontalAlignment="Left"
                                Style="{StaticResource FontIconStyle}"
                                                                                        />
                            <ToolTipService.ToolTip>
                                <TextBlock x:ConnectionId='20'
                                    Name="EmailToolTip"
                                                                                    
                                                                                              />
                            </ToolTipService.ToolTip>
                        </Border>
                    </RelativePanel>

                    <!--<Password Field>-->
                    <PasswordBox x:ConnectionId='11'
                        Name="PasswordBox"
                        Grid.Row="3"
                                                                                                           
                                                                                      
                                                                                        
                                                                                          
                        Style="{StaticResource PasswordBoxStyle}" />

                    <RelativePanel Grid.Row="3" Margin="0,15,0,0">

                        <Border x:ConnectionId='15'
                            Name="PasswordFontBorderStyle"
                            Margin="-10,0,-30,0"
                            RelativePanel.AlignRightWithPanel="True"
                            Style="{StaticResource FontBorderStyle}">

                            <FontIcon x:ConnectionId='16'
                                Name="PasswordCheck"
                                HorizontalAlignment="Left"
                                Style="{StaticResource FontIconStyle}"
                                                                                           />

                            <ToolTipService.ToolTip>
                                <TextBlock x:ConnectionId='17'
                                    Name="PasswordToolTip"
                                                                                       
                                                                                                 />
                            </ToolTipService.ToolTip>

                        </Border>
                    </RelativePanel>


                    <!--<Show Password>-->

                    <CheckBox x:ConnectionId='12'
                        Name="RevealModeCheckBox"
                        Grid.Row="4"
                        Margin="15,15,15,2"
                                                                                 
                                                                                     
                        Style="{StaticResource ValidateCheckBox}"
                                                                                    />

                    <!--<Buttons>-->

                    <RelativePanel Grid.Row="4" Margin="0,15,5,0">
                        <Button x:ConnectionId='14'
                            Name="LogInButton"
                            Width="70"
                            Margin="0,0,10,0"
                                                                          
                            Content="Log In"
                            RelativePanel.AlignRightWithPanel="True"
                            Style="{StaticResource SignUpButtonStyle}" />

                        <!--<Button
                        Name="LogInBackButton"
                        Margin="0,0,10,0"
                        Click="{x:Bind LogInBackButtonClick, Mode=OneWay}"
                        Content="Back"
                        RelativePanel.LeftOf="LogInButton"
                        Style="{StaticResource BackButtonStyle}" />-->

                    </RelativePanel>



                    <StackPanel
                        Grid.Row="5"
                        Margin="15"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,2,0"
                            FontSize="14"
                            Foreground="Black"
                            Text="New User? Start your journey with us by creating an" />

                        <HyperlinkButton x:ConnectionId='13'
                            x:Name="NavigateToSignUp"
                                                                               
                            Content="account"
                            FontSize="14"
                            Style="{StaticResource NavigationLinks}" />
                    </StackPanel>









                </Grid>






                <!--<Column Spacer>-->

                <Grid x:ConnectionId='7'
                    Name="ColumnDivider"
                    Grid.Column="1"
                    Width="1"
                    Background="#a1a1a1"
                                                                               />

                <!--<Email list>-->

                <Grid x:ConnectionId='8'
                    Name="FrequentEmailBox"
                    Grid.Column="2"
                    Padding="35,0,33,10"
                    Background="#ffffff"
                    BorderBrush="Black"
                    BorderThickness="0"
                    CornerRadius="4"
                                                                                 >
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        Foreground="Black"
                        Text="Choose an account" />


                    <ListView x:ConnectionId='9'
                        Name="FrequentEmail"
                        Grid.Row="1"
                        Width="300"
                        Height="300"
                        IsItemClickEnabled="True"
                                                                   
                        ItemContainerStyle="{StaticResource LoginListViewItem}"
                        ItemTemplate="{StaticResource emailIdOfUsers}"
                                                                      
                        Style="{StaticResource LoginListView}" />




                </Grid>



            </Grid>
        </controls:DropShadowPanel>

    </ScrollViewer>

</Page>

