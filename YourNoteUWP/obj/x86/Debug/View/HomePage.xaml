<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.View.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:util="using:YourNoteUWP.Util"
    xmlns:view="using:YourNoteUWP"
    mc:Ignorable="d">
    <Page.Resources>

        <DataTemplate x:Key="SearchTitleA"                       >
            <StackPanel x:ConnectionId='7'
                Width="300"
                Margin="0,10,0,0"
                BorderBrush="#f1f1f1"
                BorderThickness="0,0,0,1"
                Orientation="Horizontal">
                <Rectangle x:ConnectionId='8'
                    Width="35"
                    Height="35"
                                                                                      />
                <TextBlock x:ConnectionId='9'
                    Margin="5,5,0,5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Foreground="Black"
                                          />
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="SearchTitleL"                       >
            <StackPanel x:ConnectionId='3'
                Width="300"
                Margin="0,10,0,10"
                Orientation="Horizontal">
                <Rectangle x:ConnectionId='4'
                    Width="35"
                    Height="35"
                                                                                      />

                <TextBlock x:ConnectionId='5'
                    Margin="5,5,0,5"
                    HorizontalAlignment="Left"
                    FontSize="14"
                    Foreground="Black"
                                          />

            </StackPanel>
        </DataTemplate>


    </Page.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <RelativePanel VerticalAlignment="Center" Background="#ffffff">

            <StackPanel
                Margin="10,5,0,0"
                Orientation="Horizontal"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">

                <Image
                    Width="30"
                    Height="30"
                    Margin="0,2,10,10"
                    Source="/Assets/StoreLogo.scale-100.png" />

                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="20"
                    Foreground="Black"
                    Text="Notebook" />
            </StackPanel>

            <!--  MAIN MENU OPTIONS  -->
            <ListBox x:ConnectionId='22'
                Name="MainMenuOptions"
                ItemContainerStyle="{StaticResource MainMenuItemStyle}"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                                                                                  
                                                                                        
                SelectionMode="Single"
                Style="{StaticResource MainMenuStyle}">
                <ListBoxItem x:ConnectionId='30'
                    Name="PersonalNotes"
                    Content="Personal"
                                                                               />

                <ListBoxItem x:ConnectionId='31'
                    Name="SharedNotes"
                    Content="Shared"
                                                                             />

                <ListBoxItem x:ConnectionId='32'
                    Name="AllNotes"
                    Content="All Notes"
                                                                          />

            </ListBox>


            <!--  SEARCH BOX  -->
            <StackPanel x:ConnectionId='23'
                Name="SearchBoxContainer"
                Width="325"
                Margin="0,7,5,0"
                                                                             
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.LeftOf="Logout">
                <TextBox x:ConnectionId='25'
                    Name="SearchTextBox"
                    Background="#f8f8f8"
                    CornerRadius="4"
                    FontSize="15"
                    Foreground="Black"
                    Style="{StaticResource CustomSearchBox}"
                                                                  
                                                                                 />

                <Popup x:ConnectionId='26'
                    Name="SearchPopup"
                    MaxHeight="325"
                    Margin="0,4,0,0"
                    IsLightDismissEnabled="False"
                                                                    
                    KeyTipPlacementMode="Bottom">

                    <controls:DropShadowPanel
                        MaxHeight="325"
                        BlurRadius="10"
                        ShadowOpacity="1"
                        Color="Black">

                        <Grid x:ConnectionId='27'
                            Name="PopUpContainer"
                            Width="Auto"
                            CornerRadius="4">
                            <Border CornerRadius="4">
                                <ListView x:ConnectionId='29'
                                    Name="RecentlySearched"
                                    Width="325"
                                    Background="White"
                                                                                               
                                                                                                  
                                    SelectionMode="Single"
                                                                                                 >
                                    <ListView.ItemTemplateSelector>
                                        <view:ItemsDataTemplateSelector AllItems="{StaticResource SearchTitleA}" LastItems="{StaticResource SearchTitleL}" />
                                    </ListView.ItemTemplateSelector>
                                </ListView>
                            </Border>

                            <ListView x:ConnectionId='28'
                                Name="Suggestion"
                                Width="325"
                                Background="White"
                                IsItemClickEnabled="True"
                                                                                              
                                ItemContainerStyle="{StaticResource SearchContainerItemStyle}"
                                                                                               
                                                                                              >
                                <ListView.ItemTemplateSelector>
                                    <view:ItemsDataTemplateSelector AllItems="{StaticResource SearchTitleA}" LastItems="{StaticResource SearchTitleL}" />
                                </ListView.ItemTemplateSelector>
                            </ListView>

                        </Grid>
                    </controls:DropShadowPanel>
                </Popup>

            </StackPanel>


            <!--  SIGN OUT  -->
            <Button x:ConnectionId='24'
                Name="Logout"
                Width="35"
                Height="31"
                Margin="0,0,10,0"
                Background="Red"
                                                                 
                Content="&#xF3B1;"
                CornerRadius="4"
                FontFamily="Segoe MDL2 Assets"
                FontSize="14"
                Foreground="White"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                Style="{StaticResource SignOutButtonStyle}"
                ToolTipService.Placement="Bottom"
                ToolTipService.ToolTip="Sign Out" />
        </RelativePanel>



        <Grid Grid.Row="1" Margin="10,20,0,10">
            <TextBlock x:ConnectionId='15'
                Name="Title"
                Margin="0,0,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="18"
                FontWeight="SemiBold"
                Foreground="Black"
                                                       />
            <controls:DropShadowPanel
                Width="500"
                HorizontalAlignment="Center"
                BlurRadius="10">
                <Grid x:ConnectionId='16'
                    Name="NewNote"
                    Background="White"
                    CornerRadius="7"
                                                                        >
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>


                    <TextBox x:ConnectionId='17'
                        Name="TitleOfNewNote"
                        Grid.Row="0"
                        Width="470"
                        Margin="6,10,6,5"
                        Padding="8,0,0,0"
                        HorizontalAlignment="Stretch"
                        BorderBrush="Transparent"
                        FontSize="16"
                        PlaceholderText="Title"
                                                                       
                                                                                     
                        TextWrapping="Wrap"
                                                                                    />


                    <RichEditBox x:ConnectionId='18'
                        Name="ContentOfNewNote"
                        Grid.Row="1"
                        Margin="10"
                                                                                 
                        PlaceholderText="Take a note..."
                                                                                        />




                    <Grid x:ConnectionId='19'
                        Name="NoteStyleOptions"
                        Grid.Row="2"
                        Margin="12,0,10,10"
                                                                                     >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />

                        </Grid.ColumnDefinitions>



                        <view:NoteEditOptionsControl x:ConnectionId='20'
                            x:Name="NoteEditOptions"
                            Grid.Column="0"
                                                                      />

                        <Button x:ConnectionId='21'
                            Name="CreationButton"
                            Grid.Column="1"
                            Width="60"
                            Margin="10,10,3.5,10"
                            Background="#e3e3e3"
                                                                             
                                                                                 
                            CornerRadius="4"
                            FontSize="14"
                            Foreground="#000000"
                            Style="{StaticResource NoteStyleButtonStyle}" />
                    </Grid>

                </Grid>
            </controls:DropShadowPanel>

        </Grid>


        <GridView x:ConnectionId='10'
            Name="NotesData"
            Grid.Row="2"
            Margin="10,0,10,5"
            IsItemClickEnabled="True"
                                                                
            ItemContainerStyle="{StaticResource GridViewItemStyle}"
                                                                   >
            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <view:NotesDataTemplate />
                </DataTemplate>
            </GridView.ItemTemplate>
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <controls:StaggeredPanel
                        HorizontalAlignment="Stretch"
                        ColumnSpacing="7"
                        DesiredColumnWidth="250"
                        RowSpacing="7" />
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>


        <Popup x:ConnectionId='11'
            Name="NoteDisplayPopUp"
                                                                 
            IsLightDismissEnabled="True"
                                                                 
                                                          
            LightDismissOverlayMode="On"
                                                                 >

            <view:NoteContent x:ConnectionId='12'
                x:Name="NoteContentPopUp"
                Width="800"
                Height="1000" />
        </Popup>






    </Grid>





</Page>


<!--
    Width="{x:Bind NoteContentPopUpWidth, Mode=OneWay}"
    Height="{x:Bind NoteContentPopUpHeight, Mode=OneWay}"
-->




