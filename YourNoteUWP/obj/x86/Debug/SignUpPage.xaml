<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#092642"

    >
    <ScrollViewer x:ConnectionId='2'
    Name="SignUpPageScrollViewer"
    HorizontalScrollBarVisibility="Auto"
    VerticalScrollBarVisibility="Auto"
>
        <Grid 

        CornerRadius="12"
        BorderBrush="#174276"
        Background="#174276"
        BorderThickness="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"                 
    >


            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBox x:ConnectionId='3'
                Grid.Row="0"
                Margin="20"
                Name="NameBoxContent"
                Style="{StaticResource SignUpTextBox}"
                HorizontalAlignment="Center" 
                                                 
                MinHeight="100"
                MinWidth="150"
                FontSize="25"
                                                    
                MaxHeight="200" 
                MaxWidth="500"
                PlaceholderText="Enter Your Name"
                Text="">
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='21' Name="NameBoxToolTip"
                                Content=""
                             Visibility="Visible"

                                />
                </ToolTipService.ToolTip>
            </TextBox>


            <FontIcon x:ConnectionId='4'
                        Grid.Row="0"
                        Name="NameCheck"              
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Visibility="Collapsed"
                        Glyph="&#x0021;"
                        FontFamily="Amiri"
                
                        FontSize="50"
                >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='20' Name="NameToolTip"
                             Visibility="Visible"
                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>




            <TextBox x:ConnectionId='5' 
                Grid.Row="1"
                PlaceholderText="Enter Your Email Id"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource SignUpTextBox}"
                Name="EmailBox"
                MinHeight="100"
                MinWidth="150"
                MaxHeight="200"
                MaxWidth="500"
                FontSize="25"
                                              
                                                  

            >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='19'
                        Visibility="Collapsed"
                        Name="EmailBoxToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>
            </TextBox>





            <FontIcon x:ConnectionId='6' 
                Grid.Row="1"
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                Margin="0,0,20,0"
                Name="EmailCheck"
                Glyph="&#x0021;"
                FontFamily="Amiri"
                FontSize="50"
                Visibility="Collapsed"
            >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='18' 
                        Visibility="Visible"
                        Name="EmailToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>

            </FontIcon>


            <Grid   
                Grid.Row="2">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>




                <PasswordBox x:ConnectionId='13' 

                            Style="{StaticResource SignUpPasswordBox}"
                            Name="PasswordBox" 
                            PasswordRevealMode="Hidden"
                            Header="Enter Your Password :"
                                                                         
                            HorizontalAlignment="Center"
                            PlaceholderText="Enter The Password"
                                                             


                    >
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='17' 
                        Name="PasswordBoxToolTip"
                        Content=""
                            Visibility="Visible"


                     />
                    </ToolTipService.ToolTip>
                </PasswordBox>



                <FontIcon x:ConnectionId='14'
                            Name="PasswordCheck"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0"
                            Visibility="Collapsed"
                            Glyph="&#x0021;"
                            FontFamily="Amiri"
                            FontSize="50"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='16' Name="PasswordToolTip"
                            Content=""
                                 Visibility="Visible"


                            />
                    </ToolTipService.ToolTip>
                </FontIcon>


                <CheckBox x:ConnectionId='15' 
                            Grid.Row="1"
                            FontSize="25"
                            HorizontalAlignment="Center"
                            Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                                                                 
                                                                  
                    />



            </Grid>


            <PasswordBox x:ConnectionId='7' 
                        Grid.Row="3"
                        Style="{StaticResource SignUpPasswordBox}"
                        Name ="RPasswordBox"
                        MinHeight="100"
                        MinWidth="150"
                        MaxHeight="200"
                        MaxWidth="500"
                        Header="Reenter Your Password"
                        HorizontalAlignment="Center"
                                                          
                                                                       
                >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='12' Name="RPasswordBoxToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </PasswordBox>



            <FontIcon x:ConnectionId='8'
                        Grid.Row="3"
                        Name="RPasswordCheck"              
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,20,0"
                        Visibility="Collapsed"
                        Glyph="&#x0021;"
                        FontFamily="Amiri"
                        FontSize="50"
                >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='11' Name="RPasswordToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>



            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
            >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>


                <Button x:ConnectionId='9' 
                            Name="SignUpBackButton"
                            Style="{StaticResource HomePageButton}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Grid.Column="0"
                                                          
                            Content="Back"
                    />

                <Button x:ConnectionId='10' 
                            Grid.Column="1"
                            Name="SignUpButton"
                            Style="{StaticResource HomePageButton}"
                                                      
                            Content="Create Account"
                    />


            </Grid>


        </Grid>




    </ScrollViewer>


</Page>

