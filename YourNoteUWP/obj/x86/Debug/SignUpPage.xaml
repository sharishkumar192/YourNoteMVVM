<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
   

    >
    <ScrollViewer x:ConnectionId='2'
    Name="signUpPageScrollViewer"
    HorizontalScrollBarVisibility="Auto"
    VerticalScrollBarVisibility="Auto"
>
        <Grid 

        CornerRadius="12"
        BorderBrush="{ThemeResource Dark3}"
        Background="{ThemeResource Light2}"
        BorderThickness="2"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"                 
    >


            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <TextBox x:ConnectionId='3'
                Grid.Row="0"
                Margin="0,10,0,20"
                Name="nameBox"
                Style="{StaticResource TextBoxStyle}"
                HorizontalAlignment="Center" 
                                                 
                MinHeight="100"
                MinWidth="150"
                FontSize="25"
                                             
                MaxHeight="200" 
                MaxWidth="500"
                PlaceholderText="Enter Your Name"
                Text="">
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='21' Name="nameBoxToolTip"
                                Content=""
                             Visibility="Visible"

                                />
                </ToolTipService.ToolTip>
            </TextBox>


            <FontIcon x:ConnectionId='4'
                        Grid.Row="0"
                        Name="nameCheck"              
                        Style="{StaticResource BoxCheck}"
                >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='20' Name="nameToolTip"
                             Visibility="Visible"
                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>




            <TextBox x:ConnectionId='5' 
                Grid.Row="1"
                 Margin="0,0,0,20"
                PlaceholderText="Enter Your Email Id"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Style="{StaticResource TextBoxStyle}"
                Name="emailBox"
                MinHeight="100"
                MinWidth="150"
                MaxHeight="200"
                MaxWidth="500"
                FontSize="25"
                                              
                                                  

            >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='19'
                        Visibility="Collapsed"
                        Name="emailBoxToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>
            </TextBox>





            <FontIcon x:ConnectionId='6' 
                Grid.Row="1"
                Style="{StaticResource BoxCheck}"
                Name="emailCheck"
            >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='18' 
                        Visibility="Visible"
                        Name="emailToolTip"
                        Content=""

                     />
                </ToolTipService.ToolTip>

            </FontIcon>


            <Grid   
                Grid.Row="2"
                Margin="0,0,0,20"
                >

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>




                <PasswordBox x:ConnectionId='13' 

                            Style="{StaticResource PasswordBoxStyle}"
                            Name="passwordBox" 
                            PasswordRevealMode="Hidden"
                                                                         
                            HorizontalAlignment="Center"
                            PlaceholderText="Enter The Password"
                                                             


                    >
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='17' 
                        Name="passwordBoxToolTip"
                        Content=""
                            Visibility="Visible"


                     />
                    </ToolTipService.ToolTip>
                </PasswordBox>



                <FontIcon x:ConnectionId='14'
                            Name="passwordCheck"
                            Style="{StaticResource BoxCheck}"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='16' Name="passwordToolTip"
                            Content=""
                                 Visibility="Visible"


                            />
                    </ToolTipService.ToolTip>
                </FontIcon>


                <CheckBox x:ConnectionId='15' 
                            Grid.Row="1"
                            FontSize="25"
                            HorizontalAlignment="Center"
                            Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                                                                 
                                                                  
                    />



            </Grid>


            <PasswordBox x:ConnectionId='7' 
                Margin="0,0,0,10"
                        Grid.Row="3"
                        Style="{StaticResource PasswordBoxStyle}"
                        Name ="rPasswordBox"
                        PasswordRevealMode="Hidden"
                        MinHeight="100"
                        MinWidth="150"
                        MaxHeight="200"
                        MaxWidth="500"
                        HorizontalAlignment="Center"
                                                          
                                                                       
                >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='12' Name="rPasswordBoxToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </PasswordBox>



            <FontIcon x:ConnectionId='8'
                        Grid.Row="3"
                        Name="rPasswordCheck"              
                        Style="{StaticResource BoxCheck}"
                >
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='11' Name="rPasswordToolTip"
                             Visibility="Visible"

                                Content=""
                                />
                </ToolTipService.ToolTip>
            </FontIcon>



            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
            >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>


                <Button x:ConnectionId='9' 
                            Name="signUpBackButton"
                            Style="{StaticResource ButtonStyle}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Grid.Column="0"
                                                          
                            Content="Back"
                    />

                <Button x:ConnectionId='10' 
                            Grid.Column="1"
                            Name="signUpButton"
                            Style="{StaticResource ButtonStyle}"
                                                      
                            Content="Create Account"
                    />


            </Grid>


        </Grid>




    </ScrollViewer>


</Page>

