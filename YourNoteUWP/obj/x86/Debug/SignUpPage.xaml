<Page
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#092642"
    >
    <ScrollViewer x:ConnectionId='2'
        Name="SignUpPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto"
        >
    <Grid 
      
        CornerRadius="12"
        BorderBrush="#174276"
          Background="#174276"
        BorderThickness="2"
        
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        >

        <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


            <StackPanel
                
                Orientation="Horizontal">
            
            <TextBox x:ConnectionId='18'
                    Name="NameBoxContent"
                    Style="{StaticResource SignUpTextBox}"
                    Header="Enter Your Name :"
                    HorizontalAlignment="Center" 
                                                 
                    MinHeight="100"
                    MinWidth="150"
                        FontSize="25"
                                                    
                    MaxHeight="200"
                    MaxWidth="500"

                    Text=""/>


                <ProgressRing x:ConnectionId='19' Name="NameProgress" IsActive="True" Visibility="Collapsed"/>
              
            </StackPanel>




            <StackPanel 
                Grid.Row="1"
                Orientation="Horizontal">
          
            <TextBox x:ConnectionId='14' 
                       
                        Style="{StaticResource SignUpTextBox}"
                        Name="EmailBox"
                        Header="Enter Your Email Id :"
                        HorizontalAlignment="Center"
                       
                     MinHeight="100"
                    MinWidth="150"
                    MaxHeight="200"
                    MaxWidth="500"
                        FontSize="25"
                                              
                                                          
               
                    />

                <ProgressRing x:ConnectionId='15'
                    Name="EmailProgress"
                    IsActive="True"
                    Visibility="Collapsed"
                    />
                <CheckBox x:ConnectionId='16'
                    IsEnabled="True"
                    Name="EmailCheck"
                    IsChecked="True"
                    Visibility="Collapsed"
              Style="{StaticResource ValidateCheckBox}"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='17' Name="EmailToolTip"
                                 Content=""
                                 
                                 />
                    </ToolTipService.ToolTip>
                </CheckBox>


            </StackPanel>



            <Grid   Grid.Row="2">

                    <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    </Grid.RowDefinitions>


                <StackPanel Orientation="Horizontal">

                <PasswordBox x:ConnectionId='10' 
                      
                        Style="{StaticResource SignUpPasswordBox}"
                        Name="PasswordBox" 
                        PasswordRevealMode="Hidden"
                        Header="Enter Your Password :"
                                                                     
                        HorizontalAlignment="Center"
                        PlaceholderText="Enter The Password"
                                                     
                        

                    />
                    <ProgressRing x:ConnectionId='11'
                    Name="PasswordProgress"
                    IsActive="True"
                    Visibility="Collapsed"
                    />
                    <CheckBox x:ConnectionId='12'
                    IsEnabled="True"
                    Name="PasswordCheck"
                    IsChecked="True"
                    Visibility="Collapsed"
              Style="{StaticResource ValidateCheckBox}"
                    >
                        <ToolTipService.ToolTip>
                            <ToolTip x:ConnectionId='13' Name="PasswordToolTip"
                                 Content=""
                                 
                                 />
                        </ToolTipService.ToolTip>
                    </CheckBox>

                </StackPanel>

                <CheckBox x:ConnectionId='9' 
                         Grid.Row="1"
                         FontSize="25"
                         HorizontalAlignment="Center"
                         Name="revealModeCheckBox" Content="Show password" IsChecked="False"
                                                              
                                                              
                    >


            </CheckBox>


        </Grid>






            <StackPanel
                Grid.Row="3"
                    Orientation="Horizontal"
                >

                <PasswordBox x:ConnectionId='5' 
                    
                    Style="{StaticResource SignUpPasswordBox}"
                    Name ="RPasswordBox"
                    MinHeight="100"
                    MinWidth="150"
                    MaxHeight="200"
                    MaxWidth="500"
                    Header="Reenter Your Password"
                    HorizontalAlignment="Center"
                                                      
                                                                   
                    />


                <ProgressRing x:ConnectionId='6'
                    Name="RPasswordProgress"
                    IsActive="True"
                    Visibility="Collapsed"
                    />
                <CheckBox x:ConnectionId='7'
                    IsEnabled="True"
                    Name="RPasswordCheck"
                    IsChecked="True"
                    Visibility="Collapsed"
              Style="{StaticResource ValidateCheckBox}"
                    >
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='8' Name="RPasswordToolTip"
                                 Content=""
                                 
                                 />
                    </ToolTipService.ToolTip>
                </CheckBox>


            </StackPanel>




            <Grid 
                Grid.Row="4" 
                VerticalAlignment="Center"
                      >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>


                <Button x:ConnectionId='3' 
                    Name="SignUpBackButton"
                    Style="{StaticResource HomePageButton}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Grid.Column="0"
                                                  
                    Content="Back"
                />

            <Button x:ConnectionId='4' 
                Grid.Column="1"
                Name="SignUpButton"
                Style="{StaticResource HomePageButton}"
                                          
                Content="Create Account"/>


        </Grid>

            

    </Grid>

    </ScrollViewer>





</Page>

