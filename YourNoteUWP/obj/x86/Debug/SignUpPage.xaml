<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/YourNoteUWPBackDrop.jpg" Stretch="Fill" />
    </Page.Background>


    <ScrollViewer x:ConnectionId='2'
        Name="SignUpPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#ffffff"
            BorderBrush="#a1a1a1"
            BorderThickness="2"
            CornerRadius="12">


            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>


            <!--<Name Field>-->


            <RelativePanel Grid.Row="0" Margin="10,20,10,10">
                <TextBox x:ConnectionId='18'
                    Name="NameBox"
                    Margin="5,20,5,10"
                                                                                                       
                    Style="{StaticResource TextBoxStyle}"
                                                                                                                   
                                                                                                />

                <Border x:ConnectionId='19'
                    Name="NameCheckBorder"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.RightOf="NameBox"
                    Style="{StaticResource CheckBorder}">
                    <FontIcon x:ConnectionId='20'
                        Name="NameCheck"
                        Style="{StaticResource BoxCheck}"
                                                                                                    />
                    <ToolTipService.ToolTip>
                        <TextBlock x:ConnectionId='21'
                            Name="NameToolTip"
                                                                                                
                                                                                                          />
                    </ToolTipService.ToolTip>
                </Border>
            </RelativePanel>

            <!--<Email Field>-->
            <RelativePanel Grid.Row="1" Margin="10">

                <TextBox x:ConnectionId='14'
                    Name="EmailBox"
                    Grid.Row="1"
                    Margin="5"
                    HorizontalAlignment="Center"
                    VerticalContentAlignment="Center"
                                                                                                        
                    Style="{StaticResource TextBoxStyle}"
                                                                                                                    
                                                                                                 />




                <Border x:ConnectionId='15'
                    Name="EmailCheckBorder"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.RightOf="EmailBox"
                    Style="{StaticResource CheckBorder}">
                    <FontIcon x:ConnectionId='16'
                        Name="EmailCheck"
                        Style="{StaticResource BoxCheck}"
                                                                                                     />
                    <ToolTipService.ToolTip>
                        <TextBlock x:ConnectionId='17'
                            Name="EmailToolTip"
                                                                                                 
                                                                                                           />
                    </ToolTipService.ToolTip>
                </Border>
            </RelativePanel>


            <!--<Password Field>-->

            <Grid Grid.Row="2" Margin="0,0,0,10">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <RelativePanel Grid.Row="0" Margin="10">

                    <PasswordBox x:ConnectionId='10'
                        Name="PasswordBox"
                        Grid.Row="0"
                        Margin="5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                                                                                                                                
                                                                                                           
                                                                                                             
                                                                                                               
                        Style="{StaticResource PasswordBoxStyle}" />


                    <Border x:ConnectionId='11'
                        Name="PasswordCheckBorder"
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.RightOf="PasswordBox"
                        Style="{StaticResource CheckBorder}">

                        <FontIcon x:ConnectionId='12'
                            Name="PasswordCheck"
                            HorizontalAlignment="Center"
                            Style="{StaticResource BoxCheck}"
                                                                                                            />

                        <ToolTipService.ToolTip>
                            <TextBlock x:ConnectionId='13'
                                Name="PasswordToolTip"
                                                                                                        
                                                                                                                  />
                        </ToolTipService.ToolTip>

                    </Border>
                </RelativePanel>


                <CheckBox x:ConnectionId='9'
                    Name="RevealModeCheckBox"
                    Grid.Row="1"
                    Margin="20,7,0,0"
                    HorizontalAlignment="Left"
                                                                                                  
                    Content="Show password"
                    FontSize="25"
                                                                                                      
                    Style="{StaticResource ValidateCheckBox}"
                                                                                                     />


            </Grid>


            <!--<Confirm Password Field>-->

            <RelativePanel Grid.Row="3" Margin="10,10,10,10">
                <PasswordBox x:ConnectionId='5'
                    Name="ConfirmPasswordBox"
                    Grid.Row="3"
                    Margin="5"
                                                                                                                                   
                                                                                                                  
                                                                                                                
                                                                                                                  
                    Style="{StaticResource PasswordBoxStyle}" />

                <Border x:ConnectionId='6'
                    Name="ConfirmPasswordCheckBorder"
                    Margin="5"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.RightOf="ConfirmPasswordBox"
                    Style="{StaticResource CheckBorder}">
                    <FontIcon x:ConnectionId='7'
                        Name="ConfirmPasswordCheck"
                        HorizontalAlignment="Center"
                        Style="{StaticResource BoxCheck}"
                                                                                                               />

                    <ToolTipService.ToolTip>
                        <TextBlock x:ConnectionId='8'
                            Name="ConfirmPasswordToolTip"
                                                                                                           
                                                                                                                     />
                    </ToolTipService.ToolTip>
                </Border>

            </RelativePanel>


            <Grid Grid.Row="4" VerticalAlignment="Center">

                <RelativePanel>


                    <Button x:ConnectionId='3'
                        Name="SignUpBackButton"
                        Margin="0,0,10,0"
                                                                                                
                        Content="Back"
                        RelativePanel.LeftOf="LogInButton"
                        Style="{StaticResource SignUpButtonStyle}" />

                    <Button x:ConnectionId='4'
                        Name="LogInButton"
                        Width="Auto"
                        Margin="0,0,10,10"
                        Padding="2,0,2,0"
                                                                                           
                        Content="Create Account"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource SignUpButtonStyle}" />

                </RelativePanel>

            </Grid>


        </Grid>




    </ScrollViewer>


</Page>

