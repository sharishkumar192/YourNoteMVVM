<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer x:ConnectionId='2'
        Name="SignUpPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="{ThemeResource Light2}"
            BorderBrush="{ThemeResource Dark3}"
            BorderThickness="2"
            CornerRadius="12">


            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <!--<Name Field>-->

            <TextBox x:ConnectionId='3'
                x:Name="NameBox"
                Grid.Row="0"
                MinWidth="150"
                MinHeight="100"
                MaxWidth="500"
                MaxHeight="200"
                Margin="0,10,0,20"
                HorizontalAlignment="Center"
                FontSize="25"
                PlaceholderText="Enter Your Name"
                Style="{StaticResource TextBoxStyle}"
                                                                                                               >
                <ToolTipService.ToolTip>
                    <TextBlock x:ConnectionId='21'
                        Name="NameBoxToolTip"
                                                                                               
                                                                                                         />

                </ToolTipService.ToolTip>
            </TextBox>

            <FontIcon x:ConnectionId='4'
                Name="NameCheck"
                Grid.Row="0"
                Style="{StaticResource BoxCheck}"
                                                                                           >
                <ToolTipService.ToolTip>
                    <TextBlock x:ConnectionId='20'
                        Name="NameToolTip"
                                                                                            
                        Visibility="Visible" />
                </ToolTipService.ToolTip>
            </FontIcon>


            <!--<Email Field>-->

            <TextBox x:ConnectionId='5'
                Name="EmailBox"
                Grid.Row="1"
                MinWidth="150"
                MinHeight="100"
                MaxWidth="500"
                MaxHeight="200"
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="25"
                                              
                PlaceholderText="Enter Your Email Id"
                Style="{StaticResource TextBoxStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='19'
                        Name="EmailBoxToolTip"
                        Content=""
                        Visibility="Collapsed" />
                </ToolTipService.ToolTip>
            </TextBox>


            <FontIcon x:ConnectionId='6'
                Name="EmailCheck"
                Grid.Row="1"
                Style="{StaticResource BoxCheck}">
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='18'
                        Name="EmailToolTip"
                        Content=""
                        Visibility="Visible" />
                </ToolTipService.ToolTip>

            </FontIcon>


            <!--<Password Field>-->

            <Grid Grid.Row="2" Margin="0,0,0,20">

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>




                <PasswordBox x:ConnectionId='13'
                    Name="PasswordBox"
                    HorizontalAlignment="Center"
                                                     
                    PasswordRevealMode="Hidden"
                    PlaceholderText="Enter The Password"
                    Style="{StaticResource PasswordBoxStyle}">
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='17'
                            Name="PasswordBoxToolTip"
                            Content=""
                            Visibility="Visible" />
                    </ToolTipService.ToolTip>
                </PasswordBox>



                <FontIcon x:ConnectionId='14' Name="PasswordCheck" Style="{StaticResource BoxCheck}">
                    <ToolTipService.ToolTip>
                        <ToolTip x:ConnectionId='16'
                            Name="PasswordToolTip"
                            Content=""
                            Visibility="Visible" />
                    </ToolTipService.ToolTip>
                </FontIcon>


                <CheckBox x:ConnectionId='15'
                    Name="RevealModeCheckBox"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                                                        
                    Content="Show password"
                    FontSize="25"
                    IsChecked="False"
                                                           />



            </Grid>


            <!--<RPassword Field>-->

            <PasswordBox x:ConnectionId='7'
                Name="RPasswordBox"
                Grid.Row="3"
                MinWidth="150"
                MinHeight="100"
                MaxWidth="500"
                MaxHeight="200"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                                                  
                PasswordRevealMode="Hidden"
                Style="{StaticResource PasswordBoxStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='12'
                        Name="RPasswordBoxToolTip"
                        Content=""
                        Visibility="Visible" />
                </ToolTipService.ToolTip>
            </PasswordBox>



            <FontIcon x:ConnectionId='8'
                Name="RPasswordCheck"
                Grid.Row="3"
                Style="{StaticResource BoxCheck}">
                <ToolTipService.ToolTip>
                    <ToolTip x:ConnectionId='11'
                        Name="RPasswordToolTip"
                        Content=""
                        Visibility="Visible" />
                </ToolTipService.ToolTip>
            </FontIcon>




            <Grid Grid.Row="4" VerticalAlignment="Center">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>


                <Button x:ConnectionId='9'
                    Name="SignUpBackButton"
                    Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                                                  
                    Content="Back"
                    Style="{StaticResource ButtonStyle}" />

                <Button x:ConnectionId='10'
                    Name="SignUpButton"
                    Grid.Column="1"
                                              
                    Content="Create Account"
                    Style="{StaticResource ButtonStyle}" />


            </Grid>


        </Grid>




    </ScrollViewer>


</Page>

