<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="emailIdOfUsers"                       >
            <Grid x:ConnectionId='3' Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}"
                                         />

                <TextBlock x:ConnectionId='5'
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}"
                                           />

            </Grid>

        </DataTemplate>

    </Page.Resources>

    <ScrollViewer x:ConnectionId='6'
        Name="logInPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid
            HorizontalAlignment="Center"
            Background="{ThemeResource Light2}"
            BorderBrush="{ThemeResource Dark3}"
            BorderThickness="2"
            CornerRadius="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid Grid.Row="0" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>



                    <TextBox x:ConnectionId='9'
                        Name="EmailBox"
                        Width="400"
                        Height="100"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="15"
                        FontSize="25"
                        PlaceholderText="Enter Your Email Id"
                        Style="{StaticResource TextBoxStyle}"
                                                                                                                       
                                                                                                    >
                        <ToolTipService.ToolTip>
                            <ToolTip x:ConnectionId='19'
                                Name="EmailBoxToolTip"
                                                                                                           
                                                                                                                  />
                        </ToolTipService.ToolTip>
                    </TextBox>


                    <FontIcon x:ConnectionId='10'
                        Name="EmailCheck"
                        Style="{StaticResource BoxCheck}"
                                                                                                    >
                        <ToolTipService.ToolTip>
                            <ToolTip x:ConnectionId='18' Name="EmailToolTip"                                                                          />
                        </ToolTipService.ToolTip>
                    </FontIcon>


                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>



                        <PasswordBox x:ConnectionId='13'
                            x:Name="PasswordBox"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                                                                                                                                    
                                                                                                               
                                                                                                                 
                            Style="{StaticResource PasswordBoxStyle}">
                            <ToolTipService.ToolTip>
                                <TextBlock x:ConnectionId='17'
                                    Name="PasswordBoxToolTip"
                                                                                                               
                                                                                                                         />
                            </ToolTipService.ToolTip>
                        </PasswordBox>



                        <FontIcon x:ConnectionId='14'
                            Name="PasswordCheck"
                            Style="{StaticResource BoxCheck}"
                                                                                                           >
                            <ToolTipService.ToolTip>
                                <TextBlock x:ConnectionId='16' Name="PasswordToolTip"                                                                          />
                            </ToolTipService.ToolTip>
                        </FontIcon>


                        <CheckBox x:ConnectionId='15'
                            Name="RevealModeCheckBox"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            Content="Show password"
                            FontSize="25"
                                                                                                              />



                    </Grid>




                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>


                        <Button x:ConnectionId='11'
                            Name="LogInBackButton"
                            Grid.Row="4"
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                                                                                                  
                            Content="Back"
                            Style="{StaticResource ButtonStyle}" />



                        <Button x:ConnectionId='12'
                            Name="LogInButton"
                            Grid.Row="2"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                                                                                              
                            Content="Log In"
                            FontSize="25"
                            Style="{StaticResource ButtonStyle}" />





                    </Grid>




                </Grid>




            </Grid>




            <!--  XAML Code  -->
            <!--
                In this example, the ListView's ItemTemplate property is bound to a data template (shown below)
                called ContactListViewTemplate, defined in a Page.Resources section.
            -->

            <!--<DataTemplate x:Key="ContactListViewTemplate" x:DataType="local1:Contact">
                <TextBlock Text="{x:Bind Name}" x:Phase="1" Margin="0,5,0,5"/>
            </DataTemplate>-->




            <Grid x:ConnectionId='7'
                Name="FrequentEmailBox"
                Grid.Column="1"
                                                                                       >

                <ListView x:ConnectionId='8'
                    Name="FrequentEmail"
                    Width="400"
                    Height="700"
                    IsItemClickEnabled="True"
                                                                                   
                    ItemContainerStyle="{StaticResource LoginListViewItem}"
                    ItemTemplate="{StaticResource emailIdOfUsers}"
                                                                                      
                    Style="{StaticResource LoginListView}" />




            </Grid>



        </Grid>

    </ScrollViewer>







</Page>






