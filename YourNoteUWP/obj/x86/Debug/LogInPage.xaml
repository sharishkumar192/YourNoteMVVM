<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/YourNoteUWPBackDrop.jpg" Stretch="Fill" />
    </Page.Background>

    <Page.Resources>
        <DataTemplate x:Key="emailIdOfUsers"                       >
            <StackPanel x:ConnectionId='3'
                Padding="5,2"
                Background="#ffffff"
                BorderBrush="#2c2c2c"
                BorderThickness="0,0,0,1">

                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}"
                                         />

                <TextBlock x:ConnectionId='5'
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}"
                                           />

            </StackPanel>

        </DataTemplate>

    </Page.Resources>

    <ScrollViewer x:ConnectionId='6'
        Name="LogInPageScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <Grid
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#a1a1a1"
            CornerRadius="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Column="0"
                Background="#ffffff"
                BorderBrush="#a1a1a1"
                BorderThickness="5"
                CornerRadius="12">

                <Grid Grid.Row="0" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--<Email Field>-->
                    <RelativePanel Grid.Row="0" Margin="10">

                        <TextBox x:ConnectionId='16'
                            Name="EmailBox"
                            Grid.Row="0"
                            Margin="5"
                            HorizontalAlignment="Center"
                                                                                                               
                            Style="{StaticResource TextBoxStyle}"
                                                                                                                           
                                                                                                        />


                        <Border x:ConnectionId='17'
                            Name="EmailCheckBorder"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.RightOf="EmailBox"
                            Style="{StaticResource CheckBorder}">
                            <FontIcon x:ConnectionId='18'
                                Name="EmailCheck"
                                Style="{StaticResource BoxCheck}"
                                                                                                            />
                            <ToolTipService.ToolTip>
                                <TextBlock x:ConnectionId='19'
                                    Name="EmailToolTip"
                                                                                                        
                                                                                                                  />
                            </ToolTipService.ToolTip>
                        </Border>
                    </RelativePanel>

                    <!--<Password Field>-->

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <RelativePanel Grid.Row="0" Margin="15,20,10,10">

                            <PasswordBox x:ConnectionId='12'
                                x:Name="PasswordBox"
                                Margin="0,20,0,17"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                                                                                                                       
                                                                                                                  
                                                                                                                    
                                                                                                                      
                                Style="{StaticResource PasswordBoxStyle}" />

                            <Border x:ConnectionId='13'
                                Name="PasswordCheckBorder"
                                Margin="0,15,0,0"
                                RelativePanel.AlignRightWithPanel="True"
                                RelativePanel.RightOf="PasswordBox"
                                Style="{StaticResource CheckBorder}">

                                <FontIcon x:ConnectionId='14'
                                    Name="PasswordCheck"
                                    Margin="5,0,0,0"
                                    Style="{StaticResource BoxCheck}"
                                                                                                                   />

                                <ToolTipService.ToolTip>
                                    <TextBlock x:ConnectionId='15'
                                        Name="PasswordToolTip"
                                                                                                               
                                                                                                                         />
                                </ToolTipService.ToolTip>

                            </Border>
                        </RelativePanel>


                        <CheckBox x:ConnectionId='11'
                            Name="RevealModeCheckBox"
                            Grid.Row="1"
                            Margin="18.5,0,0,5"
                            HorizontalAlignment="Left"
                                                                                                         
                            Content="Show password"
                            FontSize="25"
                                                                                                             
                            Style="{StaticResource ValidateCheckBox}"
                                                                                                            />





                    </Grid>




                    <Grid Grid.Row="2">
                        <RelativePanel>
                            <Button x:ConnectionId='9'
                                Name="LogInButton"
                                Margin="0,0,10,0"
                                                                                                  
                                Content="Log In"
                                RelativePanel.AlignRightWithPanel="True"
                                Style="{StaticResource SignUpButtonStyle}" />

                            <Button x:ConnectionId='10'
                                Name="LogInBackButton"
                                Margin="0,0,10,0"
                                                                                                      
                                Content="Back"
                                RelativePanel.LeftOf="LogInButton"
                                Style="{StaticResource SignUpButtonStyle}" />





                        </RelativePanel>


                    </Grid>




                </Grid>




            </Grid>


            <Grid Grid.Column="1" Background="#a1a1a1" />

            <Grid x:ConnectionId='7'
                Name="FrequentEmailBox"
                Grid.Column="2"
                Background="#ffffff"
                BorderBrush="#a1a1a1"
                BorderThickness="5"
                CornerRadius="12"
                                                                                       >

                <ListView x:ConnectionId='8'
                    Name="FrequentEmail"
                    Width="300"
                    Height="300"
                    IsItemClickEnabled="True"
                                                                                   
                    ItemContainerStyle="{StaticResource LoginListViewItem}"
                    ItemTemplate="{StaticResource emailIdOfUsers}"
                                                                                      
                    Style="{StaticResource LoginListView}" />




            </Grid>



        </Grid>

    </ScrollViewer>







</Page>






