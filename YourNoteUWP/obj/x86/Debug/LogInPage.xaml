<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.LogInPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/ZohoSignUpPageBackdrop-Light.png" Stretch="Fill" />
    </Page.Background>

    <Page.Resources>
        <DataTemplate x:Key="emailIdOfUsers"                       >
            <StackPanel x:ConnectionId='3'
                Padding="5,2"
                Background="#ffffff"
                BorderBrush="#2c2c2c"
                BorderThickness="0,0,0,1">

                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}"
                                         />

                <TextBlock x:ConnectionId='5'
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    Style="{StaticResource SignUpTextBlocks}"
                                           />

            </StackPanel>

        </DataTemplate>

    </Page.Resources>

    <ScrollViewer x:ConnectionId='6'
        Name="LogInPageScrollViewer"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Auto">
        <!--<Login fields>-->
        <Grid
            Padding="20,20,20,20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="#ffffff"
            BorderBrush="Black"
            BorderThickness="1"
            CornerRadius="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <Grid
                Grid.Column="0"
                Padding="20,0,0,0"
                Background="#ffffff"
                BorderBrush="{StaticResource WindowBrushA}"
                BorderThickness="1,1,0,1"
                CornerRadius="12">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />

                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>


                <!--<Title>-->
                <StackPanel
                    Grid.Row="0"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#ffffff"
                    CornerRadius="12">

                    <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                        <Image
                            Width="30"
                            Height="30"
                            Margin="0,0,10,10"
                            Source="/Assets/StoreLogo.scale-100.png" />

                        <TextBlock
                            FontSize="20"
                            Foreground="Black"
                            Text="Notebook" />
                    </StackPanel>
                    <TextBlock
                        Margin="15,5,5,1"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="Black"
                        Text="Sign in" />

                    <TextBlock
                        Margin="15,1"
                        FontSize="14"
                        Foreground="Black"
                        Text="to access Notebook" />
                </StackPanel>
                <!--<Row Spacer>-->

                <Grid
                    Grid.Row="1"
                    Width="430"
                    Height="10"
                    Background="#ffffff"
                    BorderBrush="#ffffff" />


                <!--<Email Field>-->
                <TextBox x:ConnectionId='9'
                    Name="EmailBox"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                                                                                                       
                    Style="{StaticResource TextBoxStyle}"
                                                                                                                   
                                                                                                />


                <RelativePanel Grid.Row="2" Margin="0,15,0,0">
                    <Border x:ConnectionId='17'
                        Name="EmailFontBorderStyle"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource FontBorderStyle}">
                        <FontIcon x:ConnectionId='18'
                            Name="EmailCheck"
                            Style="{StaticResource FontIconStyle}"
                                                                                                        />
                        <ToolTipService.ToolTip>
                            <TextBlock x:ConnectionId='19'
                                Name="EmailToolTip"
                                                                                                    
                                                                                                              />
                        </ToolTipService.ToolTip>
                    </Border>
                </RelativePanel>

                <!--<Password Field>-->
                <PasswordBox x:ConnectionId='10'
                    Name="PasswordBox"
                    Grid.Row="3"
                                                                                                                           
                                                                                                      
                                                                                                        
                                                                                                          
                    Style="{StaticResource PasswordBoxStyle}" />

                <RelativePanel Grid.Row="3" Margin="0,15,0,0">

                    <Border x:ConnectionId='14'
                        Name="PasswordFontBorderStyle"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource FontBorderStyle}">

                        <FontIcon x:ConnectionId='15'
                            Name="PasswordCheck"
                            Style="{StaticResource FontIconStyle}"
                                                                                                           />

                        <ToolTipService.ToolTip>
                            <TextBlock x:ConnectionId='16'
                                Name="PasswordToolTip"
                                                                                                       
                                                                                                                 />
                        </ToolTipService.ToolTip>

                    </Border>
                </RelativePanel>


                <CheckBox x:ConnectionId='11'
                    Name="RevealModeCheckBox"
                    Grid.Row="4"
                                                                                                 
                                                                                                     
                    Style="{StaticResource ValidateCheckBox}"
                                                                                                    />

                <RelativePanel Grid.Row="4" Margin="0,15,5,0">
                    <Button x:ConnectionId='12'
                        Name="LogInButton"
                        Width="70"
                        Margin="0,0,10,0"
                                                                                          
                        Content="Log In"
                        RelativePanel.AlignRightWithPanel="True"
                        Style="{StaticResource SignUpButtonStyle}" />

                    <Button x:ConnectionId='13'
                        Name="LogInBackButton"
                        Margin="0,0,10,0"
                                                                                              
                        Content="Back"
                        RelativePanel.LeftOf="LogInButton"
                        Style="{StaticResource SignUpButtonStyle}" />

                </RelativePanel>












            </Grid>






            <!--<Column Spacer>-->

            <Grid
                Grid.Column="1"
                Width="1"
                Background="#a1a1a1" />

            <!--<Email list>-->

            <Grid x:ConnectionId='7'
                Name="FrequentEmailBox"
                Grid.Column="2"
                Padding="20,0,35,20"
                Background="#ffffff"
                BorderBrush="Black"
                BorderThickness="0"
                CornerRadius="12"
                                                                                       >

                <ListView x:ConnectionId='8'
                    Name="FrequentEmail"
                    Width="300"
                    Height="300"
                    IsItemClickEnabled="True"
                                                                                   
                    ItemContainerStyle="{StaticResource LoginListViewItem}"
                    ItemTemplate="{StaticResource emailIdOfUsers}"
                                                                                      
                    Style="{StaticResource LoginListView}" />




            </Grid>



        </Grid>


    </ScrollViewer>





</Page>






