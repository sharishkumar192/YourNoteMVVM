        <GridView x:ConnectionId='8'
            Name="NotesData"
            Grid.Row="1"
            Margin="5,0,5,5"
            HorizontalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1,0,1,1"
            CornerRadius="0,0,4,4"
            IsItemClickEnabled="True"
                                                                                      
