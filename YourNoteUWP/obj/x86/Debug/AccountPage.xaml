<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource Light1}"
    mc:Ignorable="d">

    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>



        <DataTemplate x:Key="SearchTitle"                       >
            <StackPanel x:ConnectionId='6'
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock x:ConnectionId='7'
                    HorizontalAlignment="Left"
                    FontSize="15"
                                          />

            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="RecentlySuggested"                       >
            <StackPanel x:ConnectionId='3'
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Left"
                    FontSize="15"
                    Style="{StaticResource SignUpTextBlocks}"
                                          />

            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel Grid.Row="0">


            <Image x:ConnectionId='24'
                Name="userImage"
                Width="64"
                Height="64"
                                                         
                                                       
                RelativePanel.AlignLeftWithPanel="True"
                Source="Assets/download.png" />






        </RelativePanel>


        <NavigationView x:ConnectionId='8'
            x:Name="Navigation"
            Grid.Row="1"
            FontSize="50"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            IsPaneToggleButtonVisible="False"
            IsSettingsVisible="False"
            PaneDisplayMode="Left"
                                                          >


            <NavigationView.MenuItems>




                <NavigationViewItem>
                    <!--<Auto Suggestion Box>-->

                    <RelativePanel x:ConnectionId='14' Name="CustomAutoSuggestBox" RelativePanel.AlignRightWithPanel="True">
                        <TextBox x:ConnectionId='15'
                            Name="SearchTextBox"
                            Width="300"
                            Height="50"
                            Background="Black"
                            CornerRadius="12"
                            Foreground="Red"
                                                               
                            PlaceholderText="Search By Title"
                                                                    />
                        <Popup x:ConnectionId='16'
                            Name="SuggestionsPopup"
                            IsLightDismissEnabled="False"
                            IsOpen="False"
                            RelativePanel.AlignBottomWith="SearchTextBox">
                            <Grid x:ConnectionId='17' Name="PopUpContainer" Background="#041322">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>


                                <ListBox x:ConnectionId='18'
                                    Name="RecentSuggestedContent"
                                    ItemTemplate="{StaticResource RecentlySuggested}"
                                                                       
                                                                                              
                                    SelectionMode="Single" />




                                <ListView x:ConnectionId='19'
                                    Name="SearchBoxContainerContent"
                                    Grid.Row="1"
                                    Height="200"
                                    IsItemClickEnabled="True"
                                                                                   
                                    ItemContainerStyle="{StaticResource LoginListViewItem}"
                                    ItemTemplate="{StaticResource SearchTitle}"
                                                                         
                                    Style="{StaticResource SearchContainerStyle}"
                                    Visibility="Collapsed" />

                            </Grid>

                        </Popup>
                    </RelativePanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='11'
                    Name="PersonalContent"
                    Content="Personal"
                    IsSelected="True"
                    Tag="Personal">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8D4;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>


                <NavigationViewItem x:ConnectionId='12'
                    Name="SharedContent"
                    Content="Shared"
                    Tag="Shared">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEBDA;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='13'
                    Name="NoteCreation"
                    Content="Add Note"
                    Tag="Add a New Note">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xF164;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <NavigationView.PaneFooter>

                <NavigationViewItem x:ConnectionId='20'
                    Name="LogoutContent"
                    Content="Logout"
                    Foreground="Red"
                    Tag="Logout"
                                                 >
                    <NavigationViewItem.Icon>
                        <FontIcon
                            FontFamily="Segoe MDL2 Assets"
                            Foreground="Red"
                            Glyph="&#xF3B1;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>


            </NavigationView.PaneFooter>


            <NavigationView.Content>


                <GridView x:ConnectionId='21'
                    Name="NotesData"
                    Margin="5"
                    HorizontalAlignment="Stretch"
                    IsItemClickEnabled="True"
                                                   
                    ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                    
                    Style="{StaticResource NoteGridView}">

                    <GridView.ItemTemplate>
                        <DataTemplate                       >
                            <local:NotesDataTemplate />


                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>


            </NavigationView.Content>
        </NavigationView>

        <Popup x:ConnectionId='9'
            Name="NoteDisplayPopUp"
            IsLightDismissEnabled="False"
            IsOpen="False">

            <local:NoteContent x:ConnectionId='10' x:Name="NoteContentPopUp" />
        </Popup>
    </Grid>

</Page>
<!--  Header="Users"  -->

