<Page x:ConnectionId='1'
    
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:data="using:YourNoteUWP.Models" 
    mc:Ignorable="d"
    Background="{ThemeResource Light1}"
    >

    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>



        <DataTemplate                        x:Key="SearchTitle" >
            <StackPanel x:ConnectionId='6' 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock x:ConnectionId='7' 
                                              
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                               />

            </StackPanel>
        </DataTemplate>

        <DataTemplate                        x:Key="RecentlySuggested" >
            <StackPanel x:ConnectionId='3' 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock x:ConnectionId='4' 
                                              
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                        Style="{StaticResource SignUpTextBlocks}" 
                               />

            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid
        >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel 
            Grid.Row="0"
            >
            

            <Image x:ConnectionId='22' 
                
                Source="Assets/download.png"
                Height="64"
                Width="64"
                RelativePanel.AlignLeftWithPanel="True" 
                Name="userImage" 

                                                         
                                                       
                />


            



        </RelativePanel>


        <NavigationView x:ConnectionId='8' 
  
            x:Name="Navigation"
            Grid.Row="1"
            IsPaneOpen="False"
            PaneDisplayMode="LeftCompact"
                                                          
            IsBackButtonVisible="Collapsed"
            FontSize="50"
            IsSettingsVisible="False"
            IsPaneToggleButtonVisible="False"
            
           
                      >


            <NavigationView.MenuItems

                    >

              
                
                
                <NavigationViewItem>
                    <!--<Auto Suggestion Box>-->

                    <RelativePanel x:ConnectionId='12'
                
                RelativePanel.AlignRightWithPanel="True"
                Name="CustomAutoSuggestBox"
                >
                        <TextBox x:ConnectionId='13'
            CornerRadius="12"

            Height="50"
            Width="300"
            Name="SearchTextBox"
            Background="Black"
            Foreground="Red"
            PlaceholderText="Search By Title"
                                                    
            />
                        <Popup x:ConnectionId='14' 
                    
                    
                Name="SuggestionsPopup"
                   IsOpen="False"
                   RelativePanel.AlignBottomWith="SearchTextBox"
                IsLightDismissEnabled="False"
                    
                   >
                            <Grid x:ConnectionId='15'
                        Background="#041322"

                  Name="PopUpContainer"
                  >
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>


                                    <ListBox x:ConnectionId='16'
                    
                    Name="RecentSuggestedContent"

                                                          
                           ItemTemplate="{StaticResource RecentlySuggested}"
                            SelectionMode="Single"
                                                                                      
                            >

                                    </ListBox>

                        


                                    <ListView x:ConnectionId='17'
                                        Grid.Row="1"
                            Height="200"
                            Name="SearchBoxContainerContent"
                            Style="{StaticResource SearchContainerStyle}"
                           ItemContainerStyle="{StaticResource SearchContainerItemStyle}"
                                                                 
                           IsItemClickEnabled="True"
                                                                           
                            ItemTemplate="{StaticResource SearchTitle}"
                            />

                            </Grid>

                        </Popup>
                    </RelativePanel>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='9' 
                    IsSelected="True"
                    Name="PersonalContent"
                    
                    Content="Personal" Tag="Personal">
                        <NavigationViewItem.Icon>
                            <FontIcon 
                                    FontFamily="Segoe MDL2 Assets" 
                                    Glyph="&#xE8D4;"
                                    />
                        </NavigationViewItem.Icon>
                </NavigationViewItem>
                    

                    <NavigationViewItem x:ConnectionId='10' 
                        Name="SharedContent"
                        Content="Shared" Tag="Shared">
                        <NavigationViewItem.Icon>
                            <FontIcon 
                                FontFamily="Segoe MDL2 Assets" 
                                Glyph="&#xEBDA;"
                                />
                        </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='11' 
                        Name="NoteCreation"
                        Content="Add Note" 
                        Tag="Add a New Note" 
                        >
                    <NavigationViewItem.Icon>
                        <FontIcon 
                                FontFamily="Segoe MDL2 Assets" 
                                Glyph="&#xF164;"
                                />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            
            <NavigationView.PaneFooter>

                <NavigationViewItem x:ConnectionId='18' 
                                                 
                    Name="LogoutContent"
                    Foreground="Red"
                    Content="Logout" Tag="Logout" >
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets"  Foreground="Red" Glyph="&#xF3B1;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>


            </NavigationView.PaneFooter>
            
            
            <NavigationView.Content
                
                >

            
                    <GridView x:ConnectionId='19' 
                       
                    IsItemClickEnabled="True"
                                                    
                    Name="NotesData"
                    Margin="5"
                            HorizontalAlignment="Stretch"
                    Style="{StaticResource NoteGridView}"
                    ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                   
                                     
                    
                    >
                        
                            <GridView.ItemTemplate
                                >
                            <DataTemplate                       >
                                <local:NotesDataTemplate/>


                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>

           
            </NavigationView.Content>
        </NavigationView>


    </Grid>

</Page>
<!--Header="Users"-->

