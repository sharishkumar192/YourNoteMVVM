<Page x:ConnectionId='1'
    
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:data="using:YourNoteUWP.Models" 
    mc:Ignorable="d"
    Background="#174276"
    >

    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>



        <DataTemplate                        x:Key="SearchTitle" >
            <StackPanel x:ConnectionId='6' 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock x:ConnectionId='7' 
                                              
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                               />

            </StackPanel>
        </DataTemplate>

        <DataTemplate                        x:Key="RecentlySuggested" >
            <StackPanel x:ConnectionId='3' 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock x:ConnectionId='4' 
                                              
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                        Style="{StaticResource SignUpTextBlocks}" 
                               />

            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid x:ConnectionId='8'
        Name="Casd"
        >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel 
            Grid.Row="0"
            >
            
            <Image x:ConnectionId='25' 
                Source="Assets/123.png"
                Height="64"
                Width="64"
                RelativePanel.AlignLeftWithPanel="True" 
                Name="userImage" 
                />


            <!--<Auto Suggestion Box>-->

            <RelativePanel x:ConnectionId='26'
                
                RelativePanel.AlignRightWithPanel="True"
                Name="CustomAutoSuggestBox"
                >
                <TextBox x:ConnectionId='27'
            CornerRadius="12"

            Height="50"
            Width="300"
            Name="SearchTextBox"
            Background="Black"
            Foreground="Red"

                                                    
            />
                 <Popup x:ConnectionId='28' 
                Name="SuggestionsPopup"
                   IsOpen="False"
                   RelativePanel.AlignBottomWith="SearchTextBox"
                IsLightDismissEnabled="False"
                   >
                    <Grid x:ConnectionId='29'
                        Background="#041322"

                  Name="PopUpContainer"
                  >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel x:ConnectionId='30'
                        Name="RecentlySearchedContainer"
                        
                        >
                            <TextBlock x:ConnectionId='34'
                                Name="RecentSuggestedHeader"
                            Text="Recently Search Notes : "
                            />
                            <ListBox x:ConnectionId='35'
                    
                    Name="RecentSuggestedContent"

                                                          
                           ItemTemplate="{StaticResource RecentlySuggested}"
                            SelectionMode="Single"
                                                                                      
                            >
                                
                            </ListBox>

                        </StackPanel>


                        <StackPanel x:ConnectionId='31'
                         Grid.Row="1"
                        Name="SearchBoxContainer"
                        
                        >
                            <TextBlock x:ConnectionId='32'
                                Name="SearchBoxContainerHeader"
                            Text="Titles: "
                            />
                            <ListView x:ConnectionId='33'
                            Height="200"
                            Name="SearchBoxContainerContent"
                            Style="{StaticResource SearchContainerStyle}"
                           ItemContainerStyle="{StaticResource SearchContainerItemStyle}"
                                                                 
                           IsItemClickEnabled="True"
                                                                           
                            ItemTemplate="{StaticResource SearchTitle}"
                            />
                        </StackPanel>
                    </Grid>

                </Popup>
            </RelativePanel>



        </RelativePanel>

        

            <SplitView x:ConnectionId='9'

            Grid.Row="1"
            Name="SplitViewz"
                       DisplayMode="CompactInline"
                       OpenPaneLength="180"
            CompactPaneLength="64"
                
                      >

                <SplitView.Pane>

            <ListBox x:ConnectionId='10'
                      Background="#091a2f"
                             Name="HamburgerOptions" 
                             SelectionMode="Single"  
                                                                                 
                              SelectedIndex="0"
                    >



                        <ListBoxItem x:ConnectionId='11'  Name="PersonalContent" 
                                  >
                        <StackPanel>
                            <TextBlock x:ConnectionId='20' 
                               HorizontalAlignment="Center"
                                Name="PersonalContentIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xE8D4;" />
                            <TextBlock x:ConnectionId='21' Name="PersonalContentText" HorizontalAlignment="Left" FontSize="12" Text="Personal" 
                                       Visibility="Collapsed"
                                       />
                        </StackPanel>
                    </ListBoxItem>


                    <ListBoxItem x:ConnectionId='12'  Name="SharedContent" 
                                  >
                        <StackPanel>
                            <TextBlock x:ConnectionId='18' 
                                  HorizontalAlignment="Center"
                                Name="SharedContentIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xEBDA;" />
                            <TextBlock x:ConnectionId='19' Name="SharedContentText" FontSize="12" Text="Shared"  HorizontalAlignment="Center" />
                        </StackPanel>
                    </ListBoxItem>


                    <ListBoxItem x:ConnectionId='13'  Name="NoteCreation" 

                                  >
                        <StackPanel>
                            <TextBlock x:ConnectionId='16' 
                                HorizontalAlignment="Center"
                                Name="NoteCreationIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xF56E;" />
                            <TextBlock x:ConnectionId='17' FontSize="12" HorizontalAlignment="Left" Name ="NoteCreationText" Text="New Note"  TextWrapping="WrapWholeWords"/>
                        </StackPanel>
                    </ListBoxItem>
                    
        

                <ListBoxItem x:ConnectionId='14'  Name="PreviousPage" 
                               
                              
                              Background="Red"
                                  >
                    <StackPanel>
                            <TextBlock x:ConnectionId='15' HorizontalAlignment="Center"
                                
                                Name="PreviousPageIcon" FontSize="20"   FontFamily="Segoe MDL2 Assets" Text="&#xF56E;"  />
                            <TextBlock FontSize="12" Text="Logout"  HorizontalAlignment="Left" TextWrapping="WrapWholeWords"/>
                    </StackPanel>
                </ListBoxItem>

                </ListBox>

            </SplitView.Pane>
            <SplitView.Content
                >

                <!--<Frame Name="MFrame">-->
                    <!--Grid View-->


                    <GridView x:ConnectionId='22' 
                    IsItemClickEnabled="True"
                                                    
                    Name="NotesData"
                    Margin="5"
                            HorizontalAlignment="Stretch"
                    Style="{StaticResource NoteGridView}"
                    ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                   
                                      
                    
                    >
                        <GridView.ItemTemplate>
                            <DataTemplate                       >
                                <local:NotesDataTemplate/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>

                <!--</Frame>-->
            </SplitView.Content>

        </SplitView>
        <Button
           
            />

    </Grid>

</Page>
<!--Header="Users"-->

