<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/AppBackdrop-Light.png" />
    </Page.Background>
    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>


        <DataTemplate x:Key="SearchTitle"                       >

            <Border x:ConnectionId='6'
                Width="300"
                BorderBrush="White"
                BorderThickness="0,0,0,1">
                <TextBlock x:ConnectionId='7'
                    Padding="0,0,0,2"
                    HorizontalAlignment="Stretch"
                    FontSize="14"
                    Foreground="White"
                    HorizontalTextAlignment="Center"
                                          />
            </Border>
        </DataTemplate>


        <DataTemplate x:Key="RecentlySuggested"                       >

            <Border x:ConnectionId='3'
                Width="300"
                BorderBrush="White"
                BorderThickness="0,0,0,1">
                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                                          />
            </Border>

        </DataTemplate>
    </Page.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel
            Margin="5,5,5,0"
            VerticalAlignment="Center"
            Background="#adb5bd"
            BorderBrush="Black"
            BorderThickness="1,1,1,0"
            CornerRadius="4,4,0,0">

            <StackPanel
                Margin="10,5,0,0"
                Orientation="Horizontal"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">

                <Image
                    Width="30"
                    Height="30"
                    Margin="0,0,10,10"
                    Source="/Assets/StoreLogo.scale-100.png" />

                <TextBlock
                    Margin="0,7,0,0"
                    FontSize="24"
                    Foreground="Black"
                    Text="Notebook" />
            </StackPanel>




            <ListBox x:ConnectionId='13'
                Name="MainMenuOptions"
                ItemContainerStyle="{StaticResource MainMenuItemStyle}"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                                                                                                 
                SelectionMode="Single"
                Style="{StaticResource MainMenuStyle}">
                <ListBoxItem x:ConnectionId='20'
                    Name="PersonalContent"
                    Content="Personal"
                                                                                                      
                    IsTapEnabled="True" />

                <ListBoxItem x:ConnectionId='21'
                    Name="SharedContent"
                    Content="Shared"
                                                                                                     />

                <ListBoxItem x:ConnectionId='22'
                    Name="NoteCreation"
                    Content="New Note"
                                                                                                    />

            </ListBox>



            <TextBox x:ConnectionId='14'
                Name="SearchTextBox"
                Width="300"
                Height="40"
                Background="White"
                CornerRadius="4"
                FontSize="15"
                Foreground="Black"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.LeftOf="UserMenu"
                Style="{StaticResource CustomSearchBox}"
                                                                                    
                                                                                                   />

            <Popup x:ConnectionId='15'
                Name="SuggestionsPopup"
                IsLightDismissEnabled="False"
                                                                                           
                RelativePanel.AlignBottomWith="SearchTextBox">
                <Grid x:ConnectionId='17'
                    Name="PopUpContainer"
                    Width="Auto"
                    Height="Auto">

                    <ListBox x:ConnectionId='18'
                        Name="RecentSuggestedContent"
                        Background="Black"
                        BorderBrush="Red"
                        BorderThickness="10,0,10,10"
                        CornerRadius="4"
                        ItemTemplate="{StaticResource RecentlySuggested}"
                                                                                                           
                                                                                                                      
                        SelectionMode="Single"
                                                                                                           />

                    <ListView x:ConnectionId='19'
                        Name="SearchBoxContainerContent"
                        Height="Auto"
                        Background="Black"
                        BorderBrush="Red"
                        BorderThickness="10,0,10,10"
                        CornerRadius="4"
                        IsItemClickEnabled="True"
                                                                                                           
                        ItemTemplate="{StaticResource SearchTitle}"
                                                                                                            
                                                                                                            />

                </Grid>

            </Popup>

            <Button x:ConnectionId='16'
                Name="UserMenu"
                Margin="10"
                Background="Black"
                                                                                       
                CornerRadius="4"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">
                <Image
                    Width="27"
                    Height="27"
                    Source="/Assets/LockScreenLogo.scale-200.png"
                    Stretch="Fill" />
            </Button>




        </RelativePanel>

        <GridView x:ConnectionId='8'
            Name="NotesData"
            Grid.Row="1"
            Margin="5,0,5,5"
            HorizontalAlignment="Stretch"
            Background="White"
            BorderBrush="Black"
            BorderThickness="1,0,1,1"
            CornerRadius="0,0,4,4"
            IsItemClickEnabled="True"
                                                                                      
            ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                                         >

            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <local:NotesDataTemplate />


                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>

        <Popup x:ConnectionId='9'
            Name="NoteDisplayPopUp"
            IsLightDismissEnabled="False"
                                                                                       >

            <local:NoteContent x:ConnectionId='10'
                x:Name="NoteContentPopUp"
                                                                                         
                                                                                            />
        </Popup>


    </Grid>



</Page>
<!--  Header="Users"  -->

