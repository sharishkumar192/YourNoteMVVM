                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock x:ConnectionId='7'
                    HorizontalAlignment="Left"
                    FontSize="15"
                                          />

            </StackPanel>
        </DataTemplate>



        <DataTemplate x:Key="RecentlySuggested"                       >
            <StackPanel x:ConnectionId='3'
                Margin="10"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Left"
                    FontSize="15"
                    Style="{StaticResource SignUpTextBlocks}"
                                          />

            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel
            Margin="5,5,5,0"
            VerticalAlignment="Center"
            Background="#adb5bd"
            BorderBrush="Black"
            BorderThickness="1,1,1,0"
            CornerRadius="4,4,0,0">

            <Button
                Width="50"
                Height="40"
                Margin="10,0,0,0"
                Background="Black"
                Content="&#xE721;"
                CornerRadius="4"
                FontFamily="Segoe MDL2 Assets"
                FontSize="15"
                Foreground="White"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignTopWithPanel="True" />

            <StackPanel
                Orientation="Horizontal"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">
                <Button
                    Width="90"
                    Height="30"
                    Margin="10,0,5,0"
                    Background="Black"
                    Content="Personal"
                    CornerRadius="4"
                    FontSize="15"
                    Foreground="White" />
                <Button
                    Width="90"
                    Height="30"
                    Margin="5,0,5,0"
                    Content="Shared"
                    CornerRadius="4"
                    FontSize="15"
                    Foreground="Black" />

                <Button
                    Width="90"
                    Height="30"
                    Margin="5,0,10,0"
                    Content="New Note"
                    CornerRadius="4"
                    FontSize="15"
                    Foreground="Black" />

            </StackPanel>

            <Button x:ConnectionId='11'
                Name="UserMenu"
                Margin="10"
                Background="Black"
                                                                                       
                CornerRadius="4"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">
                <Image
                    Width="30"
                    Height="30"
                    Source="/Assets/LockScreenLogo.scale-200.png"
                    Stretch="Fill" />
            </Button>
