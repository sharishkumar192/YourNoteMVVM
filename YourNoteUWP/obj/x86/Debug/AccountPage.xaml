<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#ffffff"
    mc:Ignorable="d">



    <Page.Resources>

        <DataTemplate x:Key="RecentlySuggestedA"                       >
            <StackPanel x:ConnectionId='18'
                Width="300"
                Margin="0,10,0,0"
                BorderBrush="#f1f1f1"
                BorderThickness="0,0,0,1"
                Orientation="Horizontal">
                <Rectangle x:ConnectionId='19'
                    Width="35"
                    Height="35"
                                              />
                <StackPanel Margin="5,0,0,5">
                    <TextBlock x:ConnectionId='20'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                                              />

                    <TextBlock x:ConnectionId='21'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Foreground="Black"
                                                />
                </StackPanel>
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="RecentlySuggestedL"                       >
            <StackPanel x:ConnectionId='13'
                Width="300"
                Margin="0,10,0,5"
                Orientation="Horizontal">
                <Rectangle x:ConnectionId='14'
                    Width="35"
                    Height="35"
                                              />
                <StackPanel Margin="5,0,0,0">
                    <TextBlock x:ConnectionId='15'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                                              />

                    <TextBlock x:ConnectionId='16'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Foreground="Black"
                                                />
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SearchTitleA"                       >
            <StackPanel x:ConnectionId='8'
                Width="300"
                Margin="0,5,0,5"
                Padding="0,0,0,5"
                BorderBrush="#f1f1f1"
                BorderThickness="0,0,0,1"
                Orientation="Horizontal">
                <Rectangle x:ConnectionId='9'
                    Width="35"
                    Height="35"
                                              />
                <StackPanel Margin="5,0,0,0">
                    <TextBlock x:ConnectionId='10'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                                              />

                    <TextBlock x:ConnectionId='11'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Foreground="Black"
                                                />
                </StackPanel>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SearchTitleL"                       >
            <StackPanel x:ConnectionId='3'
                Width="300"
                Margin="0,10,0,10"
                Padding="0,0,0,5"
                Orientation="Horizontal">
                <Rectangle x:ConnectionId='4'
                    Width="35"
                    Height="35"
                                              />
                <StackPanel Margin="5,0,0,0">
                    <TextBlock x:ConnectionId='5'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="Black"
                                              />

                    <TextBlock x:ConnectionId='6'
                        HorizontalAlignment="Left"
                        FontSize="14"
                        Foreground="Black"
                                                />
                </StackPanel>
            </StackPanel>
        </DataTemplate>



    </Page.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>


        <RelativePanel VerticalAlignment="Center" Background="#ffffff">

            <StackPanel
                Margin="10,5,0,0"
                Orientation="Horizontal"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">

                <Image
                    Width="30"
                    Height="30"
                    Margin="0,2,10,10"
                    Source="/Assets/StoreLogo.scale-100.png" />

                <TextBlock
                    FontSize="24"
                    Foreground="Black"
                    Text="Notebook" />
            </StackPanel>



            <!--  MAIN MENU OPTIONS  -->
            <ListBox x:ConnectionId='27'
                Name="MainMenuOptions"
                ItemContainerStyle="{StaticResource MainMenuItemStyle}"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                                                                                  
                                                                                        
                SelectionMode="Single"
                Style="{StaticResource MainMenuStyle}">
                <ListBoxItem x:ConnectionId='35'
                    Name="PersonalContent"
                    Content="Personal"
                                                                                 />

                <ListBoxItem x:ConnectionId='36'
                    Name="SharedContent"
                    Content="Shared"
                                                                               />

                <ListBoxItem x:ConnectionId='37'
                    Name="NoteCreation"
                    Content="New Note"
                                                                              />

            </ListBox>


            <!--  SEARCH BOX  -->
            <StackPanel x:ConnectionId='28'
                Name="SearchBoxContainer"
                Width="325"
                Margin="0,7,5,0"
                                                                             
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.LeftOf="Logout">
                <TextBox x:ConnectionId='30'
                    Name="SearchTextBox"
                    Background="#f8f8f8"
                    CornerRadius="4"
                    FontSize="15"
                    Foreground="Black"
                    Style="{StaticResource CustomSearchBox}"
                                                                  
                                                                                 />

                <Popup x:ConnectionId='31'
                    Name="SearchPopup"
                    Margin="0,4,0,0"
                    IsLightDismissEnabled="False"
                                                                    
                    KeyTipPlacementMode="Bottom">
                    <controls:DropShadowPanel
                        MaxHeight="325"
                        BlurRadius="10"
                        ShadowOpacity="1"
                        Color="Black">
                        <Grid x:ConnectionId='32'
                            Name="PopUpContainer"
                            Width="Auto"
                            MaxHeight="325"
                            CornerRadius="4">
                            <Border CornerRadius="4">
                                <ListBox x:ConnectionId='34'
                                    Name="RecentlySearched"
                                    Width="325"
                                    Background="White"
                                                                                                  
                                                                                                             
                                    SelectionMode="Single"
                                                                                                 >
                                    <ListBox.ItemTemplateSelector>
                                        <local:ItemsDataTemplateSelector AllItems="{StaticResource RecentlySuggestedA}" LastItems="{StaticResource RecentlySuggestedL}" />
                                    </ListBox.ItemTemplateSelector>
                                </ListBox>
                            </Border>

                            <ListView x:ConnectionId='33'
                                Name="Suggestion"
                                Width="325"
                                Background="White"
                                IsItemClickEnabled="True"
                                                                                              
                                ItemContainerStyle="{StaticResource SearchContainerItemStyle}"
                                                                                               
                                                                                              >
                                <ListView.ItemTemplateSelector>
                                    <local:ItemsDataTemplateSelector AllItems="{StaticResource SearchTitleA}" LastItems="{StaticResource SearchTitleL}" />
                                </ListView.ItemTemplateSelector>
                            </ListView>

                        </Grid>
                    </controls:DropShadowPanel>
                </Popup>

            </StackPanel>


            <!--  SIGN OUT  -->
            <Button x:ConnectionId='29'
                Name="Logout"
                Width="35"
                Height="31"
                Margin="0,0,5,0"
                Background="Red"
                                                                 
                Content="&#xF3B1;"
                CornerRadius="4"
                FontFamily="Segoe MDL2 Assets"
                FontSize="14"
                Foreground="White"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                ToolTipService.Placement="Bottom"
                ToolTipService.ToolTip="Sign Out" />



        </RelativePanel>


        <!--  NOTES DISPLAY  -->
        <GridView x:ConnectionId='22'
            Name="NotesData"
            Grid.Row="1"
            Padding="0,10,0,0"
            HorizontalAlignment="Stretch"
            Background="#f7f7f7"
            IsItemClickEnabled="True"
                                                                
            ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                   >

            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <local:NotesDataTemplate />


                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <Popup x:ConnectionId='23'
            Name="NoteDisplayPopUp"
            IsLightDismissEnabled="True"
                                                                 
            LightDismissOverlayMode="On">

            <local:NoteContent x:ConnectionId='24'
                x:Name="NoteContentPopUp"
                                                                   
                                                                      />
        </Popup>


    </Grid>



</Page>
<!--  Header="Users"  -->

