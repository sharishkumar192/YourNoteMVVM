<Page x:ConnectionId='1'
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush ImageSource="/Assets/AppBackdrop-Light.png" />
    </Page.Background>


    <Page.Resources>

        <DataTemplate x:Key="RecentlySuggested"                       >

            <Border x:ConnectionId='6'
                Width="300"
                BorderBrush="White"
                BorderThickness="0,0,0,1">
                <TextBlock x:ConnectionId='7'
                    HorizontalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                                          />
            </Border>

        </DataTemplate>

        <DataTemplate x:Key="SearchTitle"                       >

            <Border x:ConnectionId='3'
                Width="300"
                BorderBrush="White"
                BorderThickness="0,0,0,1">
                <TextBlock x:ConnectionId='4'
                    HorizontalAlignment="Stretch"
                    FontSize="14"
                    Foreground="White"
                    HorizontalTextAlignment="Center"
                                          />
            </Border>
        </DataTemplate>



    </Page.Resources>


    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />

            <RowDefinition />
        </Grid.RowDefinitions>


        <RelativePanel
            Margin="5,5,5,0"
            VerticalAlignment="Center"
            Background="#adb5bd"
            BorderBrush="Black"
            BorderThickness="1,1,1,0"
            CornerRadius="4,4,0,0">

            <StackPanel
                Margin="10,5,0,0"
                Orientation="Horizontal"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignLeftWithPanel="True"
                RelativePanel.AlignTopWithPanel="True">

                <Image
                    Width="30"
                    Height="30"
                    Margin="0,2,10,10"
                    Source="/Assets/StoreLogo.scale-100.png" />

                <TextBlock
                    FontSize="24"
                    Foreground="Black"
                    Text="Notebook" />
            </StackPanel>



            <!--  MAIN MENU OPTIONS  -->
            <ListBox x:ConnectionId='13'
                Name="MainMenuOptions"
                ItemContainerStyle="{StaticResource MainMenuItemStyle}"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                SelectedIndex="0"
                SelectedValue="PersonalContent"
                                                                                        
                SelectionMode="Single"
                Style="{StaticResource MainMenuStyle}">
                <ListBoxItem x:ConnectionId='21'
                    Name="PersonalContent"
                    Content="Personal"
                                                                                 />

                <ListBoxItem x:ConnectionId='22'
                    Name="SharedContent"
                    Content="Shared"
                                                                               />

                <ListBoxItem x:ConnectionId='23'
                    Name="NoteCreation"
                    Content="New Note"
                                                                              />

            </ListBox>


            <!--  SEARCH BOX  -->
            <StackPanel x:ConnectionId='14'
                Name="SearchBox"
                Width="325"
                Margin="0,7,5,0"
                                                                    
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                RelativePanel.LeftOf="Logout">
                <TextBox x:ConnectionId='16'
                    Name="SearchTextBox"
                    Background="White"
                    CornerRadius="4"
                    FontSize="15"
                    Foreground="Black"
                    Style="{StaticResource CustomSearchBox}"
                                                                  
                                                                                 />

                <Popup x:ConnectionId='17'
                    Name="SuggestionsPopup"
                    Margin="0,4,0,0"
                    IsLightDismissEnabled="False"
                                                                         
                    KeyTipPlacementMode="Bottom">
                    <Grid x:ConnectionId='18'
                        Name="PopUpContainer"
                        Width="Auto"
                        Height="Auto"
                        CornerRadius="4">
                        <Border CornerRadius="4">
                            <ListBox x:ConnectionId='20'
                                Name="RecentSuggestedContent"
                                Width="325"
                                Background="Black"
                                ItemTemplate="{StaticResource RecentlySuggested}"
                                                                                             
                                                                                                        
                                SelectionMode="Single"
                                                                                             />
                        </Border>

                        <ListView x:ConnectionId='19'
                            Name="SearchBoxContainerContent"
                            Width="325"
                            Height="Auto"
                            Background="Black"
                            CornerRadius="4"
                            IsItemClickEnabled="True"
                                                                                         
                            ItemTemplate="{StaticResource SearchTitle}"
                                                                                          
                                                                                          />

                    </Grid>

                </Popup>
            </StackPanel>


            <!--  SIGN OUT  -->
            <Button x:ConnectionId='15'
                Name="Logout"
                Width="35"
                Height="31"
                Margin="0,0,5,0"
                Background="Red"
                                                                 
                Content="&#xF3B1;"
                CornerRadius="4"
                FontFamily="Segoe MDL2 Assets"
                FontSize="14"
                Foreground="White"
                RelativePanel.AlignBottomWithPanel="True"
                RelativePanel.AlignRightWithPanel="True"
                RelativePanel.AlignTopWithPanel="True"
                ToolTipService.Placement="Bottom"
                ToolTipService.ToolTip="Sign Out" />



        </RelativePanel>

        <!--  NOTES DISPLAY  -->
        <GridView x:ConnectionId='8'
            Name="NotesData"
            Grid.Row="1"
            Margin="5,0,5,5"
            HorizontalAlignment="Stretch"
            Background="#ffffff"
            BorderBrush="Black"
            BorderThickness="1,0,1,1"
            CornerRadius="0,0,4,4"
            IsItemClickEnabled="True"
                                                                
            ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                   >

            <GridView.ItemTemplate>
                <DataTemplate                       >
                    <local:NotesDataTemplate />


                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        <Popup x:ConnectionId='9'
            Name="NoteDisplayPopUp"
            IsLightDismissEnabled="True"
                                                                 
            LightDismissOverlayMode="On">

            <local:NoteContent x:ConnectionId='10'
                x:Name="NoteContentPopUp"
                                                                   
                                                                      />
        </Popup>


    </Grid>



</Page>
<!--  Header="Users"  -->

