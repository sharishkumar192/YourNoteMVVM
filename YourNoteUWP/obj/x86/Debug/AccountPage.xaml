<Page x:ConnectionId='1'
    
    x:Class="YourNoteUWP.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YourNoteUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:data="using:YourNoteUWP.Models" 
    mc:Ignorable="d"
    Background="#174276"
    >

    <!--<Page.Resources>
        <DataTemplate x:Key="NotesofUser" x:DataType="data:Note">

            <local:NotesDataTemplate  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        </DataTemplate>
    </Page.Resources>-->


    <Page.Resources>



        <DataTemplate                        x:Key="SearchTitle" >
            <StackPanel x:ConnectionId='6' 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock x:ConnectionId='7' 
                                              
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                               />

            </StackPanel>
        </DataTemplate>

        <DataTemplate                        x:Key="RecentlySuggested" >
            <StackPanel x:ConnectionId='3' 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        Margin="10" >

                <TextBlock x:ConnectionId='4' 
                                              
                        HorizontalAlignment="Left" 
                        FontSize="15" 
                        Style="{StaticResource SignUpTextBlocks}" 
                               />

            </StackPanel>
        </DataTemplate>
    </Page.Resources>


    <Grid
        >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel 
            Grid.Row="0"
            >
            
            <Image x:ConnectionId='17' 
                Source="Assets/LockScreenLogo.scale-200.png"
                Height="64"
                Width="64"
                RelativePanel.AlignLeftWithPanel="True" 
                Name="userImage" 
                                                         
                                                       
                />


            <!--<Auto Suggestion Box>-->

            <RelativePanel x:ConnectionId='18'
                
                RelativePanel.AlignRightWithPanel="True"
                Name="CustomAutoSuggestBox"
                >
                <TextBox x:ConnectionId='19'
            CornerRadius="12"

            Height="50"
            Width="300"
            Name="SearchTextBox"
            Background="Black"
            Foreground="Red"

                                                    
            />
                 <Popup x:ConnectionId='20' 
                    
                    
                Name="SuggestionsPopup"
                   IsOpen="False"
                   RelativePanel.AlignBottomWith="SearchTextBox"
                IsLightDismissEnabled="False"
                    
                   >
                    <Grid x:ConnectionId='21'
                        Background="#041322"

                  Name="PopUpContainer"
                  >
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel x:ConnectionId='22'
                        Name="RecentlySearchedContainer"
                        
                        >
                            <TextBlock x:ConnectionId='26'
                                Name="RecentSuggestedHeader"
                            Text="Recently Search Notes : "
                            />
                            <ListBox x:ConnectionId='27'
                    
                    Name="RecentSuggestedContent"

                                                          
                           ItemTemplate="{StaticResource RecentlySuggested}"
                            SelectionMode="Single"
                                                                                      
                            >
                                
                            </ListBox>

                        </StackPanel>


                        <StackPanel x:ConnectionId='23'
                         Grid.Row="1"
                        Name="SearchBoxContainer"
                        
                        >
                            <TextBlock x:ConnectionId='24'
                                Name="SearchBoxContainerHeader"
                            Text="Titles: "
                            />
                            <ListView x:ConnectionId='25'
                            Height="200"
                            Name="SearchBoxContainerContent"
                            Style="{StaticResource SearchContainerStyle}"
                           ItemContainerStyle="{StaticResource SearchContainerItemStyle}"
                                                                 
                           IsItemClickEnabled="True"
                                                                           
                            ItemTemplate="{StaticResource SearchTitle}"
                            />
                        </StackPanel>
                    </Grid>

                </Popup>
            </RelativePanel>



        </RelativePanel>


        <NavigationView x:ConnectionId='8' 
  
            x:Name="Navigation"
            Grid.Row="1"
            IsPaneOpen="False"
            PaneDisplayMode="LeftCompact"
                                                          
            IsBackButtonVisible="Collapsed"
            FontSize="50"
            IsSettingsVisible="True"
            IsPaneVisible="True"
            IsPaneToggleButtonVisible="False"
           
                      >
                <NavigationView.MenuItems

                    >


                <NavigationViewItem x:ConnectionId='9' 
                    IsSelected="True"
                    Name="PersonalContent"
                    
                    Content="Personal" Tag="Personal">
                        <NavigationViewItem.Icon>
                            <FontIcon 
                                    FontFamily="Segoe MDL2 Assets" 
                                    Glyph="&#xE8D4;"
                                    />
                        </NavigationViewItem.Icon>
                </NavigationViewItem>
                    

                    <NavigationViewItem x:ConnectionId='10' 
                        Name="SharedContent"
                        Content="Shared" Tag="Shared">
                        <NavigationViewItem.Icon>
                            <FontIcon 
                                FontFamily="Segoe MDL2 Assets" 
                                Glyph="&#xEBDA;"
                                />
                        </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='11' 
                        Name="NoteCreation"
                        Content="Add Note" 
                        Tag="Add a New Note" 
                        >
                    <NavigationViewItem.Icon>
                        <FontIcon 
                                FontFamily="Segoe MDL2 Assets" 
                                Glyph="&#xF164;"
                                />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            
            <NavigationView.PaneFooter>

                <NavigationViewItem x:ConnectionId='12' 
                                                 
                    Name="LogoutContent"
                    Foreground="Red"
                    Content="Logout" Tag="Logout" >
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets"  Foreground="Red" Glyph="&#xF3B1;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>


            </NavigationView.PaneFooter>
            
            
            <NavigationView.Content>

                <Frame x:ConnectionId='13'
                    Name="mFrame"
                    >
                    <GridView x:ConnectionId='14' 
                    IsItemClickEnabled="True"
                                                    
                    Name="NotesData"
                    Margin="5"
                            HorizontalAlignment="Stretch"
                    Style="{StaticResource NoteGridView}"
                    ItemContainerStyle="{StaticResource NoteGridViewItem}"
                                                                   
                                     
                    
                    >
                        
                            <GridView.ItemTemplate>
                            <DataTemplate                       >
                                <local:NotesDataTemplate/>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>

                </Frame>
            </NavigationView.Content>
        </NavigationView>


    </Grid>

</Page>
<!--Header="Users"-->

