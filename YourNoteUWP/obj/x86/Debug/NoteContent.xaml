<UserControl x:ConnectionId='1'
    x:Class="YourNoteUWP.NoteContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <UserControl.Resources>

        <DataTemplate x:Key="ShareUser"                       >
            <StackPanel x:ConnectionId='3' HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Margin="10">
                    <TextBlock x:ConnectionId='4'
                        HorizontalAlignment="Left"
                        FontSize="25"
                        Foreground="Red"
                                               />
                </StackPanel>
            </StackPanel>
        </DataTemplate>

    </UserControl.Resources>
    <!--
        NOTE CONTENT
    -->
    <Grid x:ConnectionId='5'
        Width="Auto"
        Height="Auto"
        Margin="20"
                                                                
        CornerRadius="4">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  NOTE CONTENT  -->
        <RelativePanel>
            <TextBox x:ConnectionId='12'
                Name="TitleOfNote"
                Width="700"
                Height="50"
                Margin="10"
                Padding="0,10,0,0"
                Background="Red"
                BorderBrush="Black"
                BorderThickness="0,0,0,1"
                FontSize="28"
                Foreground="Black"
                HorizontalTextAlignment="Center"
                                                                        
                                                                        
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Style="{StaticResource NoteContentStyle}"
                                                                
                                                            
                TextAlignment="Center"
                                                                           />

            <Button x:ConnectionId='13'
                Name="NoteCloseButton"
                Margin="10"
                Background="Transparent"
                                                                  
                Content="&#xE106;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16"
                Foreground="Black"
                RelativePanel.AlignRightWithPanel="True" />
        </RelativePanel>
        <Grid x:ConnectionId='6'
            Name="NoteMenuOptionsContainer"
            Grid.Row="1"
                                                                                 >
            <ListBox x:ConnectionId='8'
                Name="NoteMenuOptions"
                HorizontalAlignment="Center"
                Background="Transparent"
                Style="{StaticResource NoteMenuOptionsStyle}">

                <!--<ListBoxItem>
                    <Button

                        Background="Transparent"
                        Content="&#xE1A2;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="Black" />
                </ListBoxItem>-->


                <ListBoxItem>
                    <Button x:ConnectionId='10'
                        Name="NoteShareButton"
                        Background="Transparent"
                                                                          
                        Content="&#xE72D;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="Black">
                        <Button.Flyout>
                            <Flyout>
                                <Grid>
                                    <ListView x:ConnectionId='11'
                                        Name="UsersToShareView"
                                        Width="350"
                                        Height="400"
                                        Margin="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="Beige"
                                        BorderBrush="Beige"
                                        BorderThickness="10"
                                        CornerRadius="15"
                                        IsItemClickEnabled="True"
                                                                              
                                        ItemTemplate="{StaticResource ShareUser}"
                                                                            />
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </ListBoxItem>

                <ListBoxItem>
                    <Button x:ConnectionId='9'
                        Name="NoteDeleteButton"
                        Background="Transparent"
                                                                           
                        Content="&#xE107;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="Black" />
                </ListBoxItem>

            </ListBox>
        </Grid>
        <TextBox x:ConnectionId='7'
            Name="ContentOfNote"
            Grid.Row="2"
            Margin="10"
            Padding="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0"
            FontSize="20"
            Foreground="Black"
                                                                      
                                                                      
            Style="{StaticResource NoteContentStyle}"
                                                              
                                                          
                                                                        
            TextWrapping="Wrap" />
    </Grid>



</UserControl>

