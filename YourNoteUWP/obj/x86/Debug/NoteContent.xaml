<UserControl x:ConnectionId='1'
    x:Class="YourNoteUWP.NoteContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">


    <UserControl.Resources>

        <DataTemplate x:Key="ShareUser"                       >

            <StackPanel x:ConnectionId='7'>
                <TextBlock x:ConnectionId='8'
                    Margin="0,5,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Black"
                                         />
                <TextBlock x:ConnectionId='9'
                    Margin="0,0,0,5"
                    FontSize="14"
                    Foreground="Black"
                                           />
            </StackPanel>

        </DataTemplate>

        <DataTemplate x:Key="ShareUsers"                       >

            <StackPanel x:ConnectionId='3'
                Margin="0,5,0,0"
                BorderBrush="#f5f5f5"
                BorderThickness="0,0,0,1">
                <TextBlock x:ConnectionId='4'
                    Margin="0,5,0,0"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="Black"
                                         />
                <TextBlock x:ConnectionId='5'
                    Margin="0,0,0,5"
                    FontSize="14"
                    Foreground="Black"
                                           />
            </StackPanel>

        </DataTemplate>


    </UserControl.Resources>
    <!--
        NOTE CONTENT
    -->
    <Grid x:ConnectionId='10'                                                          CornerRadius="4">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  NOTE CONTENT  -->
        <RelativePanel>
            <RichEditBox x:ConnectionId='17'
                Name="TitleOfNote"
                Width="700"
                Height="50"
                Margin="10"
                Padding="0,10,0,0"
                BorderBrush="Black"
                BorderThickness="0,0,0,1"
                FontSize="28"
                Foreground="Black"
                HorizontalTextAlignment="Center"
                                                                        
                                                                        
                RelativePanel.AlignHorizontalCenterWithPanel="True"
                Style="{StaticResource NoteDisplayTemplate}"
                                                                
                TextAlignment="Center"
                                                                           />

            <Button x:ConnectionId='18'
                Name="NoteCloseButton"
                Margin="10"
                Background="Transparent"
                                                                  
                Content="&#xE106;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="16"
                Foreground="Black"
                RelativePanel.AlignRightWithPanel="True" />
        </RelativePanel>
        <Grid x:ConnectionId='11'
            Name="NoteMenuOptionsContainer"
            Grid.Row="1"
                                                                                 >
            <ListBox x:ConnectionId='13'
                Name="NoteMenuOptions"
                HorizontalAlignment="Center"
                Background="Transparent"
                ItemContainerStyle="{StaticResource NoteMenuOptionsItemStyle}"
                Style="{StaticResource NoteMenuOptionsStyle}">

                <!--<ListBoxItem>
                    <Button

                        Background="Transparent"
                        Content="&#xE1A2;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="Black" />
                </ListBoxItem>-->


                <ListBoxItem>
                    <Button x:ConnectionId='15'
                        Name="NoteShareButton"
                        Background="Transparent"
                                                                          
                        Content="&#xE72D;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="Black"
                        Style="{StaticResource NoteStyleButtonStyle}"
                        ToolTipService.ToolTip="Share">
                        <Button.Flyout>
                            <Flyout FlyoutPresenterStyle="{StaticResource NoteColorFlyout}" Placement="BottomEdgeAlignedLeft">
                                <Grid>
                                    <ListView x:ConnectionId='16'
                                        Name="UsersToShareView"
                                        Width="150"
                                        MaxHeight="150"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="#ffffff"
                                        CornerRadius="4"
                                        IsItemClickEnabled="True"
                                                                              
                                                                                        >
                                        <ListView.ItemTemplateSelector>
                                            <local:ItemsDataTemplateSelector AllItems="{StaticResource ShareUsers}" LastItems="{StaticResource ShareUser}" />
                                        </ListView.ItemTemplateSelector>
                                    </ListView>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>
                </ListBoxItem>

                <ListBoxItem>
                    <Button x:ConnectionId='14'
                        Name="NoteDeleteButton"
                        Background="Transparent"
                                                                           
                        Content="&#xE107;"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="16"
                        Foreground="Red"
                        Style="{StaticResource NoteStyleButtonStyle1}"
                        ToolTipService.ToolTip="Delete" />
                </ListBoxItem>

            </ListBox>

        </Grid>
        <RichEditBox x:ConnectionId='12'
            Name="ContentOfNote"
            Grid.Row="2"
            Margin="10"
            Padding="10"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            BorderThickness="0"
            FontSize="20"
            Foreground="Black"
                                                                      
                                                                      
            Style="{StaticResource NoteDisplayTemplate}"
                                                              
                                                                        
            TextWrapping="Wrap" />
    </Grid>



</UserControl>

