<UserControl x:ConnectionId='1'
    x:Class="YourNoteUWP.NoteContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:YourNoteUWP.Models"
    xmlns:local="using:YourNoteUWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <local:AccountPage />

    </UserControl.DataContext>
    <UserControl.Resources>

        <DataTemplate x:Key="shareUser"                       >
            <StackPanel x:ConnectionId='3' HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel Margin="10">
                    <TextBlock x:ConnectionId='4'
                        HorizontalAlignment="Left"
                        FontSize="25"
                        Foreground="Red"
                                               />
                </StackPanel>
            </StackPanel>
        </DataTemplate>



    </UserControl.Resources>





    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="15*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="{ThemeResource SystemControlDisabledTransparentBrush}" />
        <Grid Grid.Column="2" Background="{ThemeResource SystemControlTransparentBrush}" />

        <Grid x:ConnectionId='5' Grid.Column="1"                                                                               >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>


            <!--  Title of Note  -->

            <TextBox x:ConnectionId='6'
                Name="TitleOfNote"
                Height="45"
                Margin="15"
                HorizontalAlignment="Stretch"
                FontSize="25"
                Foreground="Red"
                                                                                              
                IsTapEnabled="True"
                Style="{StaticResource TextBoxWithoutDelete}"
                                                                                      
                                                                                  
                TextAlignment="Center"
                TextWrapping="Wrap" />


            <!--  Note Close Button  -->

            <Button x:ConnectionId='7'
                Name="NoteCloseButton"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                                             
                Content="&#xE106;"
                FontFamily="Segoe MDL2 Assets"
                FontSize="5"
                RelativePanel.RightOf="NoteShareButton" />

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <!--  Note Share Button  -->
                <Button x:ConnectionId='9'
                    Name="NoteShareButton"
                    HorizontalAlignment="Left"
                                                                                            
                    FontSize="25"
                    RelativePanel.AlignLeftWithPanel="True"
                    Style="{StaticResource AccountPageButton}">
                    <StackPanel Orientation="Horizontal">

                        <TextBlock x:ConnectionId='11'
                            Name="noteShareButtonImage"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            FontFamily="Segoe MDL2 Assets"
                            Text="&#xE165;" />
                        <TextBlock x:ConnectionId='12' Name="noteShareButtonText" Text="Share" />
                    </StackPanel>
                    <Button.Flyout>
                        <Flyout>
                            <Grid>
                                <ListView x:ConnectionId='13'
                                    Name="usersToShareView"
                                    Width="350"
                                    Height="400"
                                    Margin="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Background="Beige"
                                    BorderBrush="Beige"
                                    BorderThickness="10"
                                    CornerRadius="15"
                                    IsItemClickEnabled="True"
                                                                      
                                    ItemTemplate="{StaticResource shareUser}"
                                                                        />
                            </Grid>
                        </Flyout>
                    </Button.Flyout>


                </Button>


                <!--  Note Delete Button  -->
                <Button x:ConnectionId='10'
                    Name="NoteDeleteButton"
                                                                                             
                    Content="&#xE107;"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="25"
                    Foreground="Red"
                    RelativePanel.AlignRightWithPanel="True"
                    Style="{StaticResource AccountPageButton}" />
            </StackPanel>


            <!--  Content of Note  -->
            <TextBox x:ConnectionId='8'
                Name="ContentOfNote"
                Grid.Row="2"
                Margin="20"
                FontSize="25"
                Foreground="Red"
                                                                                                
                IsTapEnabled="True"
                Style="{StaticResource TextBoxWithoutDelete}"
                                                                                        
                                                                                    
                TextWrapping="Wrap" />


        </Grid>

    </Grid>
</UserControl>

